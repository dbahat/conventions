<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sff.org.conventions"
    android:versionCode="20"
    android:versionName="3.0.0">

    <!-- For notifications -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Required for google maps, updates and refreshing the programme -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required for google GCM, for push notifications -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.portrait"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="false" />

    <!-- Note - if enabling backup, make sure to exclude the GCM registration ID from it -->
    <application
        android:name="amai.org.conventions.ConventionsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/olamot2018_app_icon"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme.Olamot2018.Toolbar">
        <activity
            android:name="amai.org.conventions.SplashActivity" android:theme="@style/AppBaseTheme.Olamot2018.Toolbar.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="amai.org.conventions.events.activities.HallActivity"></activity>
        <activity android:name="amai.org.conventions.events.activities.MyEventsActivity"></activity>
        <activity android:name="amai.org.conventions.events.activities.ProgrammeActivity"></activity>
        <activity android:name="amai.org.conventions.events.activities.ProgrammeSearchActivity"></activity>
        <activity android:name="amai.org.conventions.map.MapActivity"></activity>
        <activity
            android:name="amai.org.conventions.events.activities.EventActivity"
            android:theme="@style/AppBaseTheme.Olamot2018.Toolbar.Event"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name="amai.org.conventions.ArrivalMethodsActivity"></activity>
        <activity
            android:name="amai.org.conventions.FeedbackActivity"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name="amai.org.conventions.updates.UpdatesActivity"></activity>
        <activity android:name="amai.org.conventions.settings.SettingsActivity"></activity>
        <activity android:name="amai.org.conventions.DiscountsActivity"></activity>
        <activity android:name="amai.org.conventions.AboutActivity"></activity>
        <activity android:name="amai.org.conventions.HomeActivity" android:screenOrientation="portrait"/>
        <activity android:name="amai.org.conventions.secondhand.SecondHandActivity" />

        <service
            android:name="amai.org.conventions.notifications.ShowNotificationService"
            android:exported="false" />
        <service
            android:name="amai.org.conventions.notifications.PushNotificationHandlingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/olamot2018_notification_small" />
    </application>

</manifest>