<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <inset android:insetLeft="@dimen/button_inset_horizontal_material"
               android:insetTop="@dimen/button_inset_vertical_material"
               android:insetRight="@dimen/button_inset_horizontal_material"
               android:insetBottom="@dimen/button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <!-- Should be same as ?attr/buttonColorPressed
                Referencing theme attributes is not supported before L -->
                <solid android:color="@color/harucon2020_light_blue" />
                <padding android:left="@dimen/button_padding_horizontal_material"
                         android:top="@dimen/button_padding_vertical_material"
                         android:right="@dimen/button_padding_horizontal_material"
                         android:bottom="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>


    <!-- Disabled state -->
    <item android:state_enabled="false">
        <inset android:insetLeft="@dimen/button_inset_horizontal_material"
            android:insetTop="@dimen/button_inset_vertical_material"
            android:insetRight="@dimen/button_inset_horizontal_material"
            android:insetBottom="@dimen/button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <solid android:color="@color/harucon2020_gray" />
                <padding android:left="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:bottom="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- Normal state -->
    <item>
        <inset android:insetLeft="@dimen/button_inset_horizontal_material"
               android:insetTop="@dimen/button_inset_vertical_material"
               android:insetRight="@dimen/button_inset_horizontal_material"
               android:insetBottom="@dimen/button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <!-- Should be same as ?attr/buttonColor
                Referencing theme attributes is not supported before L -->
                <solid android:color="@color/harucon2020_dark_blue" />
                <padding android:left="@dimen/button_padding_horizontal_material"
                         android:top="@dimen/button_padding_vertical_material"
                         android:right="@dimen/button_padding_horizontal_material"
                         android:bottom="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>
</selector>