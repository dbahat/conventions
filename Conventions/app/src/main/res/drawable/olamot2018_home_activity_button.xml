<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="45"
                android:centerX="0.7"
                android:centerY="0.7"
                android:startColor="@color/olamot2018_very_dark_blue"
                android:centerColor="@color/olamot2018_very_dark_blue"
                android:endColor="@color/olamot2018_blue"
                android:type="linear"
                android:useLevel="false" />
            <stroke
                android:width="1dp"
                android:color="@color/white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="45"
                android:centerX="0.7"
                android:centerY="0.7"
                android:startColor="@color/olamot2018_very_dark_blue"
                android:centerColor="@color/olamot2018_very_dark_blue"
                android:endColor="@color/olamot2018_blue"
                android:type="linear"
                android:useLevel="false"/>
        </shape>
    </item>
</selector>
