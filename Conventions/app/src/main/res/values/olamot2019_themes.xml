<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Olamot2019.Toolbar"/>
    <style name="AppBaseTheme.Olamot2019" parent="AppBaseTheme.Light">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Olamot2019</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Olamot2019</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Olamot2019</item>
        <!-- General -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/olamot2019_blue</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorLink">@color/olamot2019_blue</item>
        <item name="actionButtonColor">@color/olamot2019_blue</item>
        <item name="swipeToRefreshColor">@color/white</item>
        <item name="swipeToRefreshBackgroundColor">@color/olamot2019_blue</item>
        <item name="snackbarActionColor">@color/olamot2019_blue</item>
        <item name="highlightedButtonBackground">@drawable/olamot2019_highlighted_button</item>
        <item name="highlightedButtonTextColor">@color/white</item>
        <item name="borderlessButtonColor">@color/olamot2019_blue</item>
        <item name="activitiesBackground">@drawable/olamot2019_background</item>
        <item name="eventListDivider">@drawable/olamot2019_event_list_divider</item>
        <item name="conflictingEventListDivider">@android:color/transparent</item>
        <item name="hintTextColor">@color/olamot2019_grey1</item>
        <item name="separatorColor">@android:color/black</item>

        <!-- Tabs -->
        <item name="selectedTabIndicatorColor">@color/olamot2019_blue</item>
        <item name="unselectedTabTextColor">@color/black</item>
        <item name="selectedTabTextColor">@color/black</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/olamot2019_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarIconAccentColor">@color/olamot2019_blue</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/olamot2019_yellow5</item>
        <item name="navigationPopupTitle">@drawable/olamot2019_logo_wide</item>
        <item name="navigationPopupBottomImage">@null</item>
        <item name="navigationPopupNotSelectedColor">@color/black</item>
        <item name="navigationPopupSelectedColor">@color/olamot2019_blue</item>
        <item name="navigationPopupSeparatorColor">@color/black</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/olamot2019_logo_wide</item>
        <!-- Home Screen -->
        <item name="homeBoxTopMargin">0dp</item>
        <item name="homeSingleButtonTopMargin">0dp</item>
        <item name="homeButtonsSideMargin">15dp</item>
        <item name="homeBackground">@drawable/olamot2019_home_background</item>
        <item name="homeLogo">@drawable/olamot2019_home_logo</item>
        <item name="homeLogoMargin">0dp</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeTitleBackground">@color/olamot2019_grey1</item>
        <item name="homeTitleText">@color/white</item>
        <item name="homeMessageBackground">@color/olamot2019_yellow1</item>
        <item name="homeMessageText">@color/black</item>
        <item name="homeCurrentEventText">@color/black</item>
        <item name="homeCurrentEventBackground">@color/olamot2019_yellow2</item>
        <item name="homeUpcomingEventBackground">@color/olamot2019_yellow1</item>
        <item name="homeButtonBackground">@drawable/olamot2019_home_activity_button</item>
        <item name="homeButtonText">@color/white</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeEventNameInList">@color/black</item>
        <item name="homeEventsListDivider">@drawable/olamot2019_home_event_list_divider</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/olamot2019_grey2</item>
        <item name="eventTypeCurrentColor">@color/olamot2019_blue</item>
        <item name="eventTypeNotStartedColor">@color/black</item>
        <item name="eventTimeDefaultTextColor">@color/black</item>
        <item name="eventTimeDefaultBackgroundColor">@color/olamot2019_yellow1</item>
        <item name="eventDetailsColor">@color/olamot2019_grey2</item>
        <item name="eventSendFeedbackColor">@color/olamot2019_blue</item>
        <item name="eventNonFavoriteColor">@color/olamot2019_brown4</item>
        <item name="eventFavoriteColor">@color/olamot2019_blue</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="mapBackground">@drawable/olamot2019_map_background</item>
        <item name="standIconColor">@color/black</item>
        <item name="standsTypeTitleColor">@color/black</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@android:color/transparent</item>
        <item name="newUpdateBackground">@android:color/transparent</item>
        <item name="updateItemBorder">@color/olamot2019_grey1</item>
        <item name="updateTextColor">@color/black</item>
        <item name="newUpdateTextColor">@color/black</item>
        <item name="focusedUpdateTextColor">@color/olamot2019_blue</item>
        <item name="updateItemSeparator">@null</item>
        <item name="updateTimeBackground">@color/olamot2019_yellow1</item>
        <item name="updateTimeColor">@color/black</item>
        <item name="updatesBackgroundDrawable">@drawable/olamot2019_updates_background</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/transparent_black</item>
        <item name="nextEventStartTimeTextColor">@color/olamot2019_grey1</item>
        <item name="nextEventStartTimeBottomLineColor">@color/olamot2019_grey1</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/olamot2019_yellow5</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/olamot2019_yellow5</item>
        <item name="eventDetailsBoxColor">@color/olamot2019_yellow2</item>
        <item name="eventFeedbackBoxColor">@color/olamot2019_yellow3</item>
        <item name="eventFeedbackTextColor">@color/black</item>
        <item name="eventDescriptionTextColor">@color/black</item>
        <item name="eventTitleBackground">@drawable/olamot2019_event_title</item>
        <item name="eventTitleTextColor">@color/black</item>
        <item name="eventDetailsHighlightedTextColor">@color/olamot2019_blue</item>
        <item name="eventActivityFavoriteColor">@color/olamot2019_blue</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/olamot2019_rotating_circular_progress_bar</item>
        <item name="feedbackButtonColor">@color/olamot2019_blue</item>
        <item name="feedbackAnswerButtonColor">@color/olamot2019_grey2</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/olamot2019_blue</item>
        <item name="conventionFeedbackTextColor">@color/black</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderDefaultTextColor">@color/black</item>
        <item name="eventTimeHeaderBackground">@null</item>
        <!-- Programme Search Screen -->
        <item name="eventNameKeywordHighlightColor">@color/olamot2019_brown1</item>
        <item name="eventKeywordHighlightColor">@color/olamot2019_blue</item>
        <!-- Second Hand Screen -->
        <item name="secondHandFormOpenColor">@color/black</item>
        <item name="secondHandFormClosedColor">@color/olamot2019_grey2</item>
        <item name="secondHandItemDefaultColor">@color/black</item>
        <item name="secondHandItemCreatedColor">@color/olamot2019_grey2</item>
        <item name="secondHandItemSoldColor">@color/olamot2019_blue</item>
        <item name="secondHandItemMissingColor">@color/olamot2019_brown1</item>
        <item name="secondHandItemsDivider">@drawable/olamot2019_second_hand_item_list_divider</item>
        <item name="secondHandFilterColor">?android:textColorPrimary</item>
        <!-- Discounts activity -->
        <item name="discountsActivityLayout">@layout/olamot2019_activity_discounts</item>
    </style>

    <style name="AppBaseTheme.Olamot2019.Toolbar.Event" parent="AppBaseTheme.Olamot2019.Toolbar">
        <item name="android:textColorLink">@color/olamot2019_blue</item>
    </style>

    <style name="AppBaseTheme.Olamot2019.Toolbar.Settings" parent="AppBaseTheme.Olamot2019.Toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>


    <style name="AppDialogTheme.Olamot2019" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/olamot2019_blue</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppAlertDialogTheme.Olamot2019" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/olamot2019_blue</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppBaseTheme.Olamot2019.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/olamot2019_splash_background</item>
    </style>
    <style name="OverflowMenu.Olamot2019" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
</resources>