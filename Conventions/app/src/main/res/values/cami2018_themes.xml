<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Cami2018.Toolbar" parent="AppBaseTheme.Cami2018"/>

    <style name="AppBaseTheme.Cami2018" parent="AppBaseTheme.Dark">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Cami2018</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Cami2018</item>
        <item name="numberPickerTheme">@style/AppBaseTheme.Cami2018.Toolbar.NumberPickerTheme</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Cami2018</item>
        <!-- General -->
        <item name="colorAccent">@color/cami2018_red</item>
        <item name="android:textColorLink">@color/cami2018_red</item>
        <item name="actionButtonColor">@color/cami2018_red</item>
        <item name="hintTextColor">@color/cami2018_red</item>
        <item name="swipeToRefreshColor">@color/cami2018_red</item>
        <item name="snackbarActionColor">@color/cami2018_red</item>
        <item name="highlightedButtonBackground">@drawable/cami2018_highlighted_button</item>
        <item name="borderlessButtonColor">@color/cami2018_red</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="feedbackAnswerButtonColor">@color/cami2018_dark_red</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/cami2018_red</item>
        <item name="activitiesBackground">@drawable/cami2018_activity_background</item>
        <item name="eventListDivider">@drawable/cami2018_event_list_divider</item>
        <!-- Note: if you change the theme, these values should be copied manually to file
         ?highlightedButtonBackground (non-v21) because prior to L it was not supported to reference
         theme attributes from a drawable xml -->
        <item name="buttonColor">@color/cami2018_red</item>
        <item name="buttonColorPressed">@color/cami2018_dark_red</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/cami2018_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarLogo">@drawable/ic_menu_white_24dp</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@drawable/cami2018_navigation_background</item>
        <item name="navigationPopupTitle">@drawable/cami2018_logo_white</item>
        <item name="navigationPopupBottomImage">@drawable/cami2018_navigation_image</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/cami2018_red</item>
        <item name="navigationPopupSeparatorColor">@color/white</item>
        <item name="navigationPopupBottomImageMargins">0dp</item>
        <item name="navigationPopupTitleMargins">40dp</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_white</item>
        <item name="aboutLogoMargins">80dp</item>
        <!-- Home Screen -->
        <item name="homeLogo">@null</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@drawable/cami2018_home_activity_background</item>
        <item name="homeToolbarTitle">@drawable/cami2018_logo_white</item>
        <item name="homeTitleBackground">@drawable/cami2018_home_title_background</item>
        <item name="homeTitleText">@color/cami2018_red</item>
        <item name="homeMessageBackground">@drawable/cami2018_home_message_background</item>
        <item name="homeMessageText">@color/cami2018_black</item>
        <item name="homeEventTimeText">@color/cami2018_red</item>
        <item name="homeCurrentEventBackground">?homeMessageBackground</item>
        <item name="homeUpcomingEventBackground">@drawable/cami2018_home_message_background</item>
        <item name="homeButtonBackground">@drawable/cami2018_home_activity_button</item>
        <item name="homeButtonText">@color/cami2018_red</item>
        <item name="homeEventNameInList">@color/black</item>
        <item name="homeEventsListDivider">@drawable/cami2018_home_event_list_divider</item>
        <item name="homeBoxTopMargin">3dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeSingleButtonStyle">@style/HomeButton.Single.Cami2018</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/cami2018_gray</item>
        <item name="eventTypeCurrentColor">@color/white</item>
        <item name="eventTypeCurrentBackgroundColor">@color/cami2018_transparent_dark_red</item>
        <item name="eventTypeNotStartedColor">@null</item>
        <item name="eventNameKeywordHighlightColor">@color/white</item>
        <item name="eventKeywordHighlightColor">@color/gold</item>
        <item name="eventTimeDefaultTextColor">@color/white</item>
        <item name="eventTimeDefaultBackgroundColor">@color/cami2018_black</item>
        <item name="eventDetailsColor">@color/white</item>
        <item name="eventSendFeedbackColor">@color/gold</item>
        <item name="eventFavoriteIcon">@drawable/ic_star_white_24dp</item>
        <item name="eventNonFavoriteColor">@color/white</item>
        <item name="eventFavoriteColor">@color/gold</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/transparent_dark_black</item>
        <item name="mapBackground">@drawable/harucon2018_map_background</item>
        <item name="standIconColor">@color/cami2018_dark_red</item>
        <item name="standsTypeTitleColor">@color/cami2018_dark_red</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@color/cami2018_transparent_dark_red</item>
        <item name="newUpdateBackground">@color/very_transparent_white</item>
        <item name="updateTimeColor">@color/very_transparent_white</item>
        <item name="updateItemBorder">@color/white</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/very_transparent_white</item>
        <item name="nextEventStartTimeTextColor">@color/white</item>
        <item name="conflictingEventsBackground">@color/very_transparent_white</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/cami2018_black</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/cami2018_black</item>
        <item name="eventDetailsBoxColor">@color/cami2018_transparent_black</item>
        <item name="eventFeedbackBoxColor">@color/cami2018_transparent_dark_red</item>
        <item name="eventVoteBoxColor">@color/cami2018_transparent_orange</item>
        <item name="eventDescriptionTextColor">@color/white</item>
        <item name="eventTitleBackground">@drawable/cami2018_event_title_background</item>
        <item name="eventTitleTextColor">@color/white</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/cami2018_rotating_circular_progress_bar</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@drawable/cami2018_event_time_header_background</item>
        <item name="eventTimeHeaderDefaultTextColor">@color/white</item>
    </style>

    <style name="AppBaseTheme.Cami2018.Toolbar.Event" parent="AppBaseTheme.Cami2018.Toolbar">
        <item name="android:textColorLink">@color/cami2018_red</item>
    </style>

    <style name="AppDialogTheme.Cami2018" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/cami2018_red</item>
        <item name="borderlessButtonColor">@color/cami2018_red</item>
    </style>

    <style name="AppAlertDialogTheme.Cami2018" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cami2018_red</item>
        <item name="borderlessButtonColor">@color/cami2018_red</item>
    </style>

    <style name="AppBaseTheme.Cami2018.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/cami2018_activity_background</item>
    </style>

    <style name="OverflowMenu.Cami2018" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <!-- Workaround for number picker font color issue when the theme is dark -->
    <style name="AppBaseTheme.Cami2018.Toolbar.NumberPickerTheme" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="HomeButton.Single.Cami2018">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>