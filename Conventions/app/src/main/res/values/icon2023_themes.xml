        <item name="eventFeedbackBoxColor">@drawable/icon2023_brown2_round</item>
        <item name="eventFeedbackTextColor">@drawable/icon2023_event_feedback_text_color</item>
        <item name="eventFeedbackProgressBarColor">@color/icon2023_blue4</item>
        <item name="eventFeedbackButtonBackground">@drawable/highlighted_button</item>
        <item name="eventFeedbackButtonTextColor">@drawable/icon2023_highlighted_button_text_color</item>
        <item name="feedbackButtonColor">@color/icon2023_brown6</item>
        <item name="eventVoteBoxColor">@color/icon2023_blue</item>
        <item name="eventVoteTextColor">@color/white</item>
        <!-- Map Screen -->
        <item name="mapBackground">?activitiesBackground</item>
        <item name="locationDetailsBackground">@color/icon2023_brown2</item>
        <item name="locationDetailsTopLineColor">@color/transparent</item>
        <item name="locationDetailsTitleColor">@color/icon2023_brown7</item>
        <item name="locationDetailsElevation">3dp</item>
        <item name="floorChangeBackground">@color/icon2023_brown4</item>
        <item name="mapSearchFiltersBackground">@color/icon2023_brown1</item>
        <item name="mapSearchResultsBackground">@color/icon2023_transparent_brown1</item>
        <item name="mapSearchBorder">@color/icon2023_brown1</item>
        <item name="mapSearchPaneElevation">10dp</item>
