        <item name="mapSearchSeparator">@color/icon2023_brown6</item>
        <item name="mapSearchResultsDivider">@drawable/icon2023_map_search_results_divider</item>
        <item name="mapSearchCheckboxTint">@color/icon2023_brown6</item>
        <item name="mapSearchHint">@color/icon2023_brown6</item>
        <item name="mapSearchBarBackground">@drawable/icon2023_search_bar_background</item>
        <item name="mapSearchBarHorizontalMargins">5dp</item>
        <item name="standIconColor">@color/icon2023_brown7</item>
        <item name="standsTypeTitleColor">@color/icon2023_brown6</item>
        <!-- Second Hand Screen -->
        <item name="secondHandFormColor">@drawable/icon2023_second_hand_form_text_color</item>
        <item name="secondHandItemStatusColor">@drawable/icon2023_second_hand_item_status_text_color</item>
        <item name="secondHandItemsDivider">@drawable/icon2023_second_hand_item_list_divider</item>
        <item name="secondHandFilterColor">@color/white</item>
        <item name="secondHandSelectedFilterColor">@color/icon2023_brown2</item>
        <!-- Discounts activity -->
        <item name="discountsActivityLayout">@layout/activity_discounts</item>
    </style>

    <style name="AppBaseTheme.Icon2023.Event" parent="AppBaseTheme.Icon2023">
        <item name="android:textColorLink">@color/icon2023_blue4</item>
    </style>

    <style name="AppBaseTheme.Icon2023.Settings" parent="AppBaseTheme.Icon2023">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
         <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="AppDialogTheme.Icon2023" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/icon2023_brown5</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/icon2023_brown5</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AppAlertDialogTheme.Icon2023" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/icon2023_brown5</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/icon2023_brown5</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AppBaseTheme.Icon2023.Splash">
        <item name="android:windowBackground">@drawable/icon2023_activities_background</item>
    </style>

     <style name="TransparentTheme.Icon2023" parent="TransparentTheme">
          <!-- Custom Tabs -->
          <item name="customTabsToolbarColor">@color/icon2023_brown2</item>
     </style>
