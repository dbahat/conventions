<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="AppBaseTheme.Icon2023" parent="AppBaseTheme.Light">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Icon2023</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Icon2023</item>
        <!-- General -->
        <item name="android:colorPrimaryDark">@color/black</item> <!-- Toolbar color -->
        <!-- Used in: default selected checkbox/switch color, settings titles,
             cursor color in all edit texts. Also used as the default action button color and map search checkbox color. -->
        <item name="colorAccent">@color/icon2023_brown3</item>
        <!-- This color should be readable over the activities background.
             Used as the text color in: accessibility, arrival methods.
             Also used as default for many texts and as the default "large text" color (e.g. in settings). -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used in: default unselected checkbox color and default "medium/small" texts (e.g. in settings). -->
        <item name="android:textColorSecondary">@color/icon2023_brown3</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorHint">@color/icon2023_brown3</item>
        <item name="android:textColorLink">@color/icon2023_brown2</item>
        <item name="actionButtonColor">@color/icon2023_blue</item>
        <item name="actionButtonIcon">@drawable/search</item>
        <item name="hintTextColor">@color/icon2023_green5</item>
        <item name="swipeToRefreshColor">@color/icon2023_brown7</item>
        <item name="swipeToRefreshBackgroundColor">@color/icon2023_brown3</item>
        <item name="snackbarActionColor">@color/icon2023_brown2</item>
        <item name="highlightedButtonBackground">@drawable/highlighted_button</item>
        <item name="borderlessButtonColor">@color/icon2023_brown6</item>
        <item name="activitiesBackground">@drawable/icon2023_activities_background</item>
        <item name="contentStartMargin">0dp</item>
        <item name="contentEndMargin">0dp</item>
        <item name="eventListDivider">@drawable/icon2023_event_list_divider</item>
        <item name="separatorColor">@null</item>
        <!-- These are used for buttons. They should be usable when the background is:
             Event screen vote
             Feedback screen
             Map bottom info panel
             Arrival methods screen
         -->
        <item name="buttonColor">@color/icon2023_blue4</item>
        <item name="buttonColorPressed">@color/icon2023_blue2</item>
        <item name="buttonColorDisabled">@color/icon2023_gray1</item>
        <item name="buttonTextColor">@drawable/icon2023_highlighted_button_text_color</item>

        <!-- Tabs -->
        <item name="tabsBackground">@color/icon2023_brown1</item>
        <item name="unselectedTabTextColor">@color/icon2023_brown7</item>
        <item name="selectedTabTextColor">@color/icon2023_brown7</item>
        <item name="selectedTabIndicator">@drawable/tab_indicator</item>
        <item name="selectedTabIndicatorColor">@color/icon2023_brown7</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/icon2023_notification_icon</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@color/icon2023_brown2</item>
        <item name="toolbarIconAccentColor">@color/icon2023_green4</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/icon2023_brown2</item>
        <item name="navigationPopupTitle">@null</item>
        <item name="navigationPopupTitleMargins">10dp</item>
        <item name="navigationPopupBottomImage">@null</item>
        <item name="navigationPopupNotSelectedColor">@color/icon2023_brown7</item>
        <item name="navigationPopupSelectedColor">@color/icon2023_brown7</item>
        <item name="navigationPopupSelectedBackground">@color/icon2023_brown1</item>
        <item name="navigationPopupSeparatorColor">@color/icon2023_brown7</item>
        <item name="navigationItemsShouldDisplayIcon">false</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/icon2023_home_logo</item>
        <item name="aboutLogoMargins">20dp</item>
        <!-- Home Screen -->
        <item name="homeBoxTopMargin">10dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeButtonsSideMargin">0dp</item>
        <item name="homeBackground">?activitiesBackground</item>
        <item name="homeLogo">@drawable/icon2023_home_logo_selector</item>
        <item name="homeLogoMargin">5dp</item>
        <item name="homeFrameTopMargin">5dp</item>
        <item name="homeFrameBottomMargin">5dp</item>
        <item name="homeToolbarBackground">@null</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeTitleBackground">@drawable/icon2023_home_title_background</item>
        <item name="homeTitleText">@drawable/icon2023_home_title_text_color</item>
        <item name="homeEventsMargin">10dp</item>
        <item name="homeShowCurrentUpcomingTitles">true</item>
        <item name="homeContentBackground">@drawable/icon2023_home_content_background</item>
        <item name="homeContentText">@drawable/icon2023_home_content_text_color</item>
        <item name="homeEventTimeText">@color/icon2023_brown7</item>
        <item name="homeEventHallText">@color/icon2023_brown7</item>
        <item name="homeButtonBackground">@drawable/icon2023_home_button</item>
        <item name="homeGotoUpdatesButtonBackground">@drawable/icon2023_goto_updates_button</item>
        <item name="homeGotoUpdatesButtonText">@color/icon2023_brown6</item>
        <item name="homeButtonText">@color/icon2023_brown1</item>
        <item name="homeBottomImage">@drawable/icon2023_home_bottom_selector</item>
        <item name="homeEventsListDivider">@color/transparent</item>
        <item name="homeEventsListDividerHeight">10dp</item>
        <item name="homeEventsListEventBackground">@drawable/icon2023_brown1_round</item>
        <!-- Event View -->
        <item name="eventViewLayout">@layout/rounded_convention_event</item>
        <item name="eventViewHeight">104dp</item>
        <item name="eventViewCornerRadius">4dp</item>
        <item name="eventBackgroundColor">@color/icon2023_brown1</item>
        <item name="eventTextColor">@drawable/icon2023_event_view_text_color</item>
        <item name="eventTimeTextColor">@drawable/icon2023_event_time_text_color</item>
        <item name="eventTimeBackground">@drawable/icon2023_event_time_background</item>
        <item name="eventDetailsColor">?eventTextColor</item>
        <item name="eventFavoriteIcon">@drawable/icon2023_favorite_icon</item>
        <item name="eventFavoriteIconColor">@color/icon2023_brown5</item>
        <item name="eventFeedbackIcon">@drawable/icon2023_feedback_icon</item>
        <item name="eventFeedbackIconColor">@drawable/icon2023_feedback_icon_color</item>
        <item name="eventStartMargin">0dp</item>
        <item name="conflictingEventBackground">@drawable/icon2023_conflicting_event_label_bg</item>
        <item name="logoutButtonTextColor">@color/icon2023_red2</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderTextColor">@color/white</item>
        <item name="eventTimeHeaderBackground">@drawable/icon2023_event_time_header</item>
        <item name="searchCategoriesColor">@color/icon2023_brown2</item>
        <item name="searchCategoriesTextColor">@color/icon2023_brown1</item>
        <item name="eventTimeHeaderWidth">match_parent</item>
