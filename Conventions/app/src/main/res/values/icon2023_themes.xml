        <item name="searchDrawerTextColor">@color/icon2023_brown7</item>
        <item name="searchDrawerSeparatorColor">@color/icon2023_brown7</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/transparent</item>
        <item name="nextEventStartTimeTextColor">@color/white</item>
        <item name="nextEventStartTimeBottomLineColor">@color/transparent</item>
        <item name="conflictingEventsListBorder">@null</item>
        <item name="conflictingEventsBackground">@null</item>
        <item name="conflictingEventsGroupSeparator">@drawable/icon2023_conflicting_events_group_separator</item>
        <item name="conflictingEventsGroupSeparatorHeight">4dp</item>
        <item name="conflictingEventsGroupSeparatorMargin">4dp</item>
        <item name="freeTimeTextColor">@color/white</item>
        <item name="addActionButtonIcon">@drawable/ic_add_white</item>
        <!-- Feedback Screen -->
        <item name="feedbackProgressBarColor">@color/icon2023_blue4</item>
        <item name="conventionFeedbackTextColor">@drawable/icon2023_feedback_text_color</item>
        <item name="feedbackEventDateHeaderTextColor">@color/icon2023_brown1</item>
        <!-- Updates Screen -->
        <item name="updateTimeBackground">@null</item>
        <item name="updateTimeColor">@color/icon2023_green3</item>
        <item name="showNewUpdateIndicator">true</item>
        <item name="newUpdateIndicatorTextColor">@color/white</item>
        <item name="newUpdateIndicatorBackground">@drawable/icon2023_new_update_indicator_background</item>
        <item name="updateItemSeparator">@color/transparent</item>
        <item name="updateBackground">@drawable/icon2023_update_background</item>
        <item name="updateTextColor">@drawable/icon2023_update_text_color</item>
        <item name="updateElevation">2dp</item>
        <item name="updateItemBorder">?borderlessButtonColor</item>
        <item name="updatesSeparatorColor">@color/transparent</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">?toolbarBackground</item>
        <item name="eventActivityFavoriteColor">@color/icon2023_green1</item>
        <item name="eventDetailsDefaultBackground">?activitiesBackground</item>
        <item name="eventTitleBackground">@null</item>
        <item name="eventTitlePadding">0dp</item>
        <item name="eventNameBackground">@drawable/icon2023_brown3_top_round</item>
