<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="AppBaseTheme.Harucon2015">
        <item name="toolbarBackground">@color/very_dark_purple</item>
        <item name="toolbarLogo">@raw/logo_border</item>
        <item name="toolbarLogoType">svg</item>
        <item name="toolbarIconAccentColor">@color/gold</item>

        <item name="appLogoHome">@drawable/logo</item>
        <item name="homeConventionNameVisibility">visible</item>
        <item name="homeConventionName">הארוקון 2015</item>
        <item name="homeConventionDate">03.05.2015</item>
        <item name="homeButtonsColor">#d6d7d7</item>
        <item name="mapHomeImage">@drawable/map</item>
        <item name="eventsHomeImage">@drawable/events</item>
        <item name="updatesHomeImage">@drawable/updates</item>
        <item name="arrivalMethodsHomeImage">@drawable/arrival_methods</item>

        <item name="eventTypeCentralColor">@color/medium_purple</item>
        <item name="eventTypeSpecialColor">@color/silver</item>
        <item name="eventTypeScreeningColor">@color/dark_purple</item>
        <item name="eventTypeLectureColor">@color/red</item>
        <item name="eventTypeWorkshopColor">@color/light_purple</item>
        <item name="eventTypePanelColor">@color/yellow</item>

        <item name="eventTypeEndedColor">@color/ultra_light_gray</item>
        <item name="eventTypeCurrentColor">@color/light_yellow</item>
        <item name="eventTypeNotStartedColor">@color/white</item>

        <item name="nextEventStartTimeBackground">@color/gold</item>
        <item name="nextEventStartTimeBottomLineColor">@android:color/black</item>
        <item name="conflictingEventsBackground">@color/gray</item>

        <item name="navigationPopupDisabledBackground">@color/very_light_gray</item>

        <item name="eventTimeHeaderColor">@color/very_light_gray</item>

        <item name="updateTimeColor">@color/ultra_light_gray</item>
        <item name="updatesBackground">@color/white</item>

        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTopLineColor">@android:color/black</item>

        <item name="eventDetailsBoxColor">#B0FFFFFF</item>
        <item name="eventDetailsDefaultBackgroundColor">#FDB271</item>
    </style>

    <style name="AppBaseTheme.Cami2015" parent="AppBaseTheme.Harucon2015">
        <item name="appLogoHome">@drawable/cami_logo_border</item>
        <item name="logoHomeBackground">?nextEventStartTimeBackground</item>
        <item name="homeConventionNameVisibility">gone</item>
        <item name="homeConventionName">כאמ"י 2015</item>
        <item name="homeConventionDate">20.08.2015</item>

        <item name="toolbarBackground">#6C0020</item>
        <item name="toolbarLogo">@drawable/cami_logo_toolbar</item>1
        <item name="toolbarLogoType">bitmap</item>
        <item name="toolbarIconAccentColor">#CEE4A3</item>

        <item name="nextEventStartTimeBackground">#FDB271</item>
    </style>

    <style name="MainActivityOverlayText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:shadowColor">#442B73</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="EventDetailsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?eventDetailsBoxColor</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/white</item>
        <item name="pageColor">@color/ultra_light_gray</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
        <item name="snap">false</item>
    </style>

    <style name="EventViewLargeText">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="EventViewSmallText">
        <item name="android:textSize">14dp</item>
    </style>

</resources>
