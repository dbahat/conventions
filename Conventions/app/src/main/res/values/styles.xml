<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?selectedTabIndicatorColor</item>
        <item name="tabTextColor">?unselectedTabTextColor</item>
        <item name="tabSelectedTextColor">?selectedTabTextColor</item>
        <item name="android:layout_marginStart">?attr/contentStartMargin</item>
        <item name="android:layout_marginEnd">?attr/contentEndMargin</item>
    </style>

    <style name="DialogTitle" parent="@style/RtlOverlay.DialogWindowTitle.AppCompat" />

    <style name="EventDescriptionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/event_details_box_side_margins</item>
        <item name="android:layout_marginRight">@dimen/event_details_box_side_margins</item>
        <item name="android:padding">@dimen/event_details_box_padding</item>
        <item name="android:background">?eventDetailsBoxColor</item>
    </style>

    <style name="EventDetailsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/event_details_box_side_margins</item>
        <item name="android:layout_marginRight">@dimen/event_details_box_side_margins</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">?eventDetailsBoxColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EventDetailsHeaderBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/event_details_box_side_margins</item>
        <item name="android:layout_marginRight">@dimen/event_details_box_side_margins</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?eventTitleBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EventDescriptionBox.Vote">
        <item name="android:background">?eventVoteBoxColor</item>
    </style>

    <style name="EventDescriptionBox.Feedback">
        <item name="android:padding">0dp</item>
        <item name="android:background">?eventFeedbackBoxColor</item>
    </style>

    <style name="EventViewLargeText">
        <!-- Setting text size in DP because the entire view's height is pre-determined -->
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="EventViewSmallText">
        <!-- Setting text size in DP because the entire view's height is pre-determined -->
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="EventViewExtraSmallText">
        <!-- Setting text size in DP because the entire view's height is pre-determined -->
        <item name="android:textSize" tools:ignore="SpUsage">10dp</item>
    </style>

    <style name="BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?borderlessButtonColor</item>
        <item name="android:minHeight">@null</item>
        <item name="android:minWidth">@null</item>
        <item name="android:padding">@null</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="HighlightedButton">
        <item name="android:background">?highlightedButtonBackground</item>
        <item name="android:textColor">?highlightedButtonTextColor</item>
    </style>

    <style name="EventAnswerButton" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?feedbackAnswerButtonColor</item>
    </style>
    <style name="EventAnswerButtonHighlighted" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?feedbackAnswerButtonSelectedColor</item>
    </style>

    <!-- Values copied from R.style.TextAppearance_AppCompat_Body1 since it's private (for v21 version too) -->
    <style name="FeedbackQuestionTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="HomeButton">
        <item name="android:background">?homeButtonBackground</item>
        <item name="android:textColor">?homeButtonText</item>
        <item name="android:minHeight">@null</item>
        <item name="android:minWidth">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:gravity">top|center</item>
    </style>

    <style name="HomeButton.Single">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
