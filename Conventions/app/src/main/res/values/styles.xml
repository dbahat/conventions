<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTitle" parent="@style/RtlOverlay.DialogWindowTitle.AppCompat" />

    <style name="EventDetailsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/event_details_box_side_margins</item>
        <item name="android:layout_marginRight">@dimen/event_details_box_side_margins</item>
        <item name="android:padding">@dimen/event_details_box_padding</item>
        <item name="android:background">?eventDetailsBoxColor</item>
    </style>

    <style name="EventDetailsBox.Feedback">
        <item name="android:padding">0dp</item>
        <item name="android:background">?eventFeedbackBoxColor</item>
    </style>

    <style name="EventViewLargeText">
        <!-- Setting text size in SP because the entire view's height is pre-determined -->
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="EventViewSmallText">
        <!-- Setting text size in SP because the entire view's height is pre-determined -->
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?toolbarBackground</item>
        <item name="android:minHeight">@null</item>
        <item name="android:minWidth">@null</item>
        <item name="android:padding">@null</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="HighlightedButton">
        <item name="android:background">@drawable/feedback_highlighted_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EventAnswerButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?feedbackAnswerButtonColor</item>
    </style>
    <style name="EventAnswerButtonHighlighted" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?feedbackAnswerButtonSelectedColor</item>
    </style>

    <!-- Values copied from R.style.TextAppearance_AppCompat_Body1 since it's private (for v21 version too) -->
    <style name="FeedbackQuestionTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>
