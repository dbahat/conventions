<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Harucon2019.Toolbar" parent="AppBaseTheme.Harucon2019"/>

    <style name="AppBaseTheme.Harucon2019" parent="AppBaseTheme.Dark">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Harucon2019</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Harucon2019</item>
        <item name="numberPickerTheme">@style/AppBaseTheme.Harucon2019.Toolbar.NumberPickerTheme</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Harucon2019</item>
        <!-- General -->
        <item name="colorAccent">@color/harucon2019_orange</item>
        <item name="android:textColorLink">@color/harucon2019_orange</item>
        <item name="actionButtonColor">@color/harucon2019_orange</item>
        <item name="hintTextColor">@color/harucon2019_orange</item>
        <item name="swipeToRefreshColor">@color/harucon2019_orange</item>
        <item name="snackbarActionColor">@color/harucon2019_orange</item>
        <item name="highlightedButtonBackground">@drawable/harucon2019_highlighted_button</item>
        <item name="borderlessButtonColor">@color/harucon2019_orange</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="feedbackAnswerButtonColor">@color/harucon2019_dark_orange</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/harucon2019_orange</item>
        <item name="activitiesBackground">@drawable/harucon2019_activity_background</item>
        <item name="eventListDivider">@drawable/harucon2019_event_list_divider</item>
        <!-- Note: if you change the theme, these values should be copied manually to file
         ?highlightedButtonBackground (non-v21) because prior to L it was not supported to reference
         theme attributes from a drawable xml -->
        <item name="buttonColor">@color/harucon2019_orange</item>
        <item name="buttonColorPressed">@color/harucon2019_dark_orange</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/harucon_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarLogo">@drawable/ic_menu_white_24dp</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@drawable/harucon2019_navigation_background</item>
        <item name="navigationPopupTitle">@drawable/harucon2019_logo</item>
        <item name="navigationPopupBottomImage">@drawable/harucon2019_navigation_image</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/harucon2019_orange</item>
        <item name="navigationPopupSeparatorColor">@color/white</item>
        <item name="navigationPopupBottomImageMargins">50dp</item>
        <item name="navigationPopupTitleMargins">50dp</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_white</item>
        <item name="aboutLogoMargins">80dp</item>
        <!-- Home Screen -->
        <item name="homeLogo">@null</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@drawable/harucon2019_home_activity_background</item>
        <item name="homeToolbarTitle">@drawable/harucon2019_logo</item>
        <item name="homeTitleBackground">@color/harucon2019_red</item>
        <item name="homeTitleText">@color/white</item>
        <item name="homeMessageBackground">@color/harucon2019_dark_purple</item>
        <item name="homeMessageText">@color/harucon2019_orange</item>
        <item name="homeEventTimeText">@color/white</item>
        <item name="homeCurrentEventBackground">@color/harucon2019_dark_orange</item>
        <item name="homeCurrentEventText">@color/white</item>
        <item name="homeUpcomingEventBackground">@color/harucon2019_dark_purple</item>
        <item name="homeButtonBackground">@drawable/harucon2019_home_activity_button</item>
        <item name="homeButtonText">@color/white</item>
        <item name="homeEventNameInList">@color/white</item>
        <item name="homeEventsListDivider">@drawable/harucon2019_home_event_list_divider</item>
        <item name="homeBoxTopMargin">0dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeSingleButtonStyle">@style/HomeButton.Single.Harucon2019</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/harucon2019_gray</item>
        <item name="eventTypeEndedBackgroundColor">@color/harucon2019_transparent_dark_gray</item>
        <item name="eventTypeCurrentColor">@color/white</item>
        <item name="eventTypeCurrentBackgroundColor">@color/harucon2019_transparent_red</item>
        <item name="eventTypeNotStartedColor">@color/white</item>
        <item name="eventNameKeywordHighlightColor">@color/gold</item>
        <item name="eventKeywordHighlightColor">@color/gold</item>
        <item name="eventTimeDefaultTextColor">@color/white</item>
        <item name="eventTimeDefaultBackgroundColor">@color/harucon2019_red</item>
        <item name="eventDetailsColor">@color/white</item>
        <item name="eventSendFeedbackColor">@color/gold</item>
        <item name="eventFavoriteIcon">@drawable/ic_star_white_24dp</item>
        <item name="eventNonFavoriteColor">@color/white</item>
        <item name="eventFavoriteColor">@color/gold</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/transparent_dark_black</item>
        <item name="mapBackground">@drawable/cami2018_map_background</item>
        <item name="mapToolbarColor">@color/cami2018_less_transparent_black</item>
        <item name="standIconColor">@color/harucon2019_dark_orange</item>
        <item name="standsTypeTitleColor">@color/harucon2019_dark_orange</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@color/harucon2019_transparent_red</item>
        <item name="newUpdateBackground">@color/very_transparent_white</item>
        <item name="updateTimeColor">@color/white</item>
        <item name="updateItemBorder">@color/white</item>
        <item name="updateTimeBackground">@color/very_transparent_white</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/very_transparent_white</item>
        <item name="nextEventStartTimeTextColor">@color/white</item>
        <item name="conflictingEventsBackground">@color/very_transparent_white</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/harucon2019_dark_blue</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/harucon2019_dark_blue</item>
        <item name="eventDetailsBoxColor">@color/harucon2019_transparent_black</item>
        <item name="eventFeedbackBoxColor">@color/harucon2019_transparent_red</item>
        <item name="eventVoteBoxColor">@color/harucon2019_transparent_red</item>
        <item name="eventDescriptionTextColor">@color/white</item>
        <item name="eventTitleBackground">@color/harucon2019_transparent_black</item>
        <item name="eventTitleTextColor">@color/white</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/harucon2019_rotating_circular_progress_bar</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@drawable/harucon2019_event_time_header_background</item>
        <item name="eventTimeHeaderDefaultTextColor">@color/white</item>
    </style>

    <style name="AppBaseTheme.Harucon2019.Toolbar.Event" parent="AppBaseTheme.Harucon2019.Toolbar">
        <item name="android:textColorLink">@color/harucon2019_orange</item>
    </style>

    <style name="AppDialogTheme.Harucon2019" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/harucon2019_orange</item>
        <item name="borderlessButtonColor">@color/harucon2019_orange</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppAlertDialogTheme.Harucon2019" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/harucon2019_orange</item>
        <item name="borderlessButtonColor">@color/harucon2019_orange</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Harucon2019.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/harucon2019_splash_background</item>
    </style>

    <style name="OverflowMenu.Harucon2019" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <!-- Workaround for number picker font color issue when the theme is dark -->
    <style name="AppBaseTheme.Harucon2019.Toolbar.NumberPickerTheme" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="HomeButton.Single.Harucon2019">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>