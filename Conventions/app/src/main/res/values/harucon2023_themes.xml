<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Harucon2023" parent="AppBaseTheme.Light.DarkToolbar">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Harucon2023</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Harucon2023</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Harucon2023</item>
        <!-- General -->
        <item name="android:colorPrimaryDark">@color/black</item> <!-- Toolbar color -->
        <!-- Used in: checkbox colors in map search, default selected checkbox/switch color, settings titles,
             cursor color in all edit texts. Also used as the default action button color. -->
        <item name="colorAccent">@color/harucon2023_green</item>
        <!-- This color should be readable over the activities background.
             Used as the text color in: accessibility, arrival methods.
             Also used as default for many texts and as the default "large text" color (e.g. in settings). -->
        <item name="android:textColorPrimary">@color/harucon2023_gray4</item>
        <!-- Used in: default unselected checkbox color and default "medium/small" texts (e.g. in settings). -->
        <item name="android:textColorSecondary">@color/harucon2023_gray4</item>
        <item name="android:textColorHint">@color/harucon2023_gray3</item>
        <item name="android:textColorLink">@color/harucon2023_blue</item>
        <item name="actionButtonColor">@color/harucon2023_pink</item>
        <item name="actionButtonIcon">@drawable/harucon2023_search_icon</item>
        <item name="hintTextColor">@color/harucon2023_gray3</item>
        <item name="swipeToRefreshColor">@color/harucon2023_pink</item>
        <item name="snackbarActionColor">@color/harucon2023_pink</item>
        <item name="borderlessButtonColor">@color/harucon2023_blue</item>
        <item name="activitiesBackground">@color/harucon2023_gray1</item>
        <item name="infoActivitiesBackground">@color/white</item>
        <item name="eventListDivider">@drawable/harucon2023_event_list_divider</item>
        <item name="separatorColor">@null</item>
        <!-- These are used for buttons. They should be usable when the background is:
             Event screen vote
             Feedback screen
             Map bottom info panel
             Arrival methods screen
         -->
        <item name="buttonColor">@color/harucon2023_blue</item>
        <item name="buttonColorPressed">@color/harucon2023_light_blue</item>
        <item name="buttonColorDisabled">@color/harucon2023_gray2</item>
        <item name="buttonTextColor">@drawable/harucon2023_highlighted_button_text_color</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/harucon_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@color/harucon2023_pink</item>
        <item name="toolbarIconAccentColor">@color/harucon2023_yellow</item>
        <item name="toolbarTitleColor">@color/white</item>
        <!-- Navigation Drawer -->
        <item name="navigationPopupBackground">@color/harucon2023_pink</item>
        <item name="navigationPopupSpaceVisibility">gone</item>
        <item name="navigationPopupTitle">@null</item>
        <item name="navigationPopupBottomImage">@null</item>
        <item name="navigationPopupTopSelectedColor">@color/harucon2023_yellow</item>
        <item name="navigationPopupTopNotSelectedColor">@color/white</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/harucon2023_yellow</item>
        <item name="navigationPopupSeparatorColor">@color/white</item>
        <item name="navigationPopupBottomImageMargins">0dp</item>
        <item name="navigationPopupBottomImageTopMargin">0dp</item>
        <item name="navigationPopupTitleWidth">0dp</item>
        <item name="navigationItemsShouldDisplayIcon">false</item>
        <item name="navigationPopupItemPaddingTop">13dp</item>
        <item name="navigationPopupItemPaddingBottom">13dp</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_black</item>
        <item name="aboutLogoMargins">80dp</item>
        <!-- Home Screen -->
        <item name="homeLogoMargin">20dp</item>
        <item name="homeLogo">@drawable/harucon2022_home_image</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@color/harucon2023_gray1</item>
        <item name="homeToolbarTitle">@drawable/harucon_logo_white_small</item>
        <item name="homeToolbarBackground">@color/harucon2023_pink</item>
        <item name="homeTitleBackground">@drawable/harucon2023_home_title_background</item>
        <item name="homeShowCurrentUpcomingTitles">true</item>
        <item name="homeTitleText">@drawable/harucon2023_home_title_text</item>
        <item name="homeContentBackground">@drawable/harucon2023_home_content_background</item>
        <item name="homeContentText">@drawable/harucon2023_home_content_text</item>
        <item name="homeButtonBackground">@drawable/harucon2023_home_button</item>
        <item name="homeButtonText">@color/white</item>
        <item name="homeEventsListEventBackground">@drawable/harucon2023_rounded_edges_white</item>
        <item name="homeEventsListDivider">@android:color/transparent</item>
        <item name="homeEventsListDividerHeight">10dp</item>
        <item name="homeBoxTopMargin">10dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeFrameTopMargin">10dp</item>
        <!-- Event View -->
        <item name="eventViewLayout">@layout/rounded_convention_event</item>
        <item name="eventViewHeight">104dp</item>
        <item name="eventBackgroundColor">@color/white</item>
        <item name="eventTextColor">@drawable/harucon2023_event_view_text_color</item>
        <item name="eventNameKeywordHighlightColor">@color/harucon2023_pink</item>
        <item name="eventKeywordHighlightColor">@color/harucon2023_pink</item>
        <item name="eventTimeTextColor">@color/white</item>
        <item name="eventTimeBackground">@drawable/harucon2023_event_view_time_background_color</item>
        <item name="eventFavoriteIcon">@drawable/harucon2023_favorite_icon</item>
        <item name="eventFavoriteIconColor">@drawable/harucon2023_favorite_icon_color</item>
        <item name="eventFeedbackIcon">@drawable/harucon2023_event_feedback_icon</item>
        <item name="eventFeedbackIconColor">@drawable/harucon2023_event_feedback_icon_color</item>
        <item name="useEventTextColorFromEventType">false</item>
        <item name="useEventTimeColorFromEventType">false</item>
        <item name="conflictingEventBackground">@drawable/harucon2023_conflicting_event_label_bg</item>
        <!-- Programme Screen and Programme Search Screen -->
        <item name="eventTimeHeaderBackground">@drawable/harucon2023_event_time_header_background</item>
        <item name="eventTimeHeaderWidth">match_parent</item>
        <item name="eventTimeHeaderTextColor">@color/white</item>
        <item name="eventTimeHeaderMarginTop">10dp</item>
        <item name="eventTimeHeaderMarginBottom">@null</item>
        <item name="eventTimeHeaderMarginHorizontal">8dp</item>
        <item name="eventTimeHeaderPaddingVertical">4dp</item>
        <item name="marginBetweenEventsListAndNextHeader">0dp</item>
        <item name="fabOnProgrammeTop">true</item>
        <item name="fabOnProgrammeTopAlignment">START</item>
        <item name="searchCategoriesColor">@color/harucon2023_pink</item>
        <item name="searchTitleTextColor">@color/harucon2023_gray3</item>
        <item name="searchTitleBackgroundColor">@color/white</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@null</item>
        <item name="nextEventStartTimeTextColor">@color/harucon2023_pink</item>
        <item name="conflictingEventsBackground">@null</item>
        <item name="nextEventStartTimeBottomLineColor">@null</item>
        <item name="conflictingEventsSideMargin">0dp</item>
        <item name="conflictingEventsTopBottomMargin">0dp</item>
        <item name="conflictingEventsGroupSeparator">@drawable/harucon2023_conflicting_events_group_separator</item>
        <item name="conflictingEventsGroupSeparatorHeight">4dp</item>
        <item name="conflictingEventsGroupSeparatorMargin">4dp</item>
        <item name="conflictingEventsListBorder">@null</item>
        <!-- Feedback Screen -->
        <item name="conventionFeedbackTextColor">@drawable/harucon2023_convention_feedback_text_color</item>
        <item name="conventionFeedbackAnswerBackground">@drawable/harucon2023_convention_feedback_answer_bg_selector</item>
        <item name="feedbackMultiAnswerMinWidth">50dp</item>
        <item name="feedbackMultiAnswerPaddingTopBottom">4dp</item>
        <item name="feedbackMultiAnswerPaddingStartEnd">9dp</item>
        <item name="feedbackMultiAnswerPaddingStartFirstAnswer">9dp</item>
        <item name="feedbackMultiAnswerMarginTopBottom">2dp</item>
        <item name="feedbackMultiAnswerMarginBetweenAnswers">9dp</item>
        <item name="feedbackProgressBarColor">@color/harucon2023_pink</item>
        <!-- Updates Screen -->
        <item name="updateTimeColor">@drawable/harucon2023_update_time_color</item>
        <item name="updateTimeBackground">@null</item>
        <item name="updateItemBorder">@color/harucon2023_blue</item>
        <item name="updateItemSeparator">@android:color/transparent</item>
        <item name="updateBackground">@drawable/harucon2023_rounded_edges_white_inset</item>
        <item name="updateTextColor">@color/harucon2023_gray4</item>
        <item name="updateElevation">2dp</item>
        <item name="showNewUpdateIndicator">true</item>
        <item name="newUpdateIndicatorTextColor">@color/white</item>
        <item name="newUpdateIndicatorBackground">@drawable/harucon2023_new_update_indicator_background</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/harucon2023_pink</item>
        <item name="eventDetailsDefaultBackground">@color/harucon2023_gray1</item>
        <item name="eventTitleBackground">@drawable/harucon2023_event_activity_title_background</item>
        <item name="eventTitlePadding">8dp</item>
        <item name="eventTitleTextColor">@color/white</item>
        <item name="eventDetailsBoxColor">@null</item>
        <item name="eventFeedbackBoxColor">@drawable/harucon2023_rounded_edges_blue</item>
        <item name="eventFeedbackTextColor">@drawable/harucon2023_event_feedback_text_color</item>
        <item name="eventFeedbackAnswerBackground">@drawable/harucon2023_event_feedback_answer_bg_selector</item>
        <item name="eventVoteBoxColor">@drawable/harucon2023_rounded_edges_green</item>
        <item name="eventVoteTextColor">@color/white</item>
        <item name="eventDescriptionBoxColor">@drawable/harucon2023_rounded_edges_white</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="eventSurveyTextColor">@drawable/harucon2023_event_vote_text_color</item>
        <item name="eventFeedbackButtonBackground">@drawable/harucon2023_event_feedback_button</item>
        <item name="eventFeedbackButtonTextColor">@drawable/harucon2023_event_feedback_button_text_color</item>
        <item name="eventFeedbackProgressBarColor">@color/white</item>
        <item name="eventDetailsTextColor">@color/black</item>
        <item name="eventDescriptionTextColor">@color/black</item>
        <!-- Map Screen -->
        <item name="mapBackground">@color/harucon2023_gray1</item>
        <item name="standIconColor">@color/harucon2023_pink</item>
        <item name="standsTypeTitleColor">@color/harucon2023_pink</item>
        <item name="locationDetailsBackground">@color/transparent_white</item>
        <item name="locationDetailsTopLineColor">@color/black</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="iconClearMap">@drawable/ic_clear_black</item>
        <item name="iconFloorUp">@drawable/arrow_up_wide</item>
        <item name="iconFloorDown">@drawable/arrow_down_wide</item>
        <item name="floorChangeBackground">@color/transparent_white</item>
        <item name="floorUpDownTextColor">@color/black</item>
        <item name="standsMapHighlight">@color/harucon2023_transparent_green</item>
    </style>

    <style name="AppBaseTheme.Harucon2023.Event" parent="AppBaseTheme.Harucon2023">
        <item name="android:textColorLink">@color/harucon2023_blue</item>
    </style>

    <style name="AppDialogTheme.Harucon2023" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <!-- Used for configure notifications popup title and separator -->
        <item name="colorAccent">@color/harucon2023_blue</item>
        <item name="borderlessButtonColor">@color/harucon2023_blue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppAlertDialogTheme.Harucon2023" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for configure notifications popup title and separator -->
        <item name="colorAccent">@color/harucon2023_blue</item>
        <item name="borderlessButtonColor">@color/harucon2023_blue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Harucon2023.Splash">
        <item name="android:windowBackground">@color/harucon2023_gray1</item>
    </style>

    <style name="OverflowMenu.Harucon2023" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>
</resources>