<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Harucon2017.Toolbar" parent="AppBaseTheme.Harucon2017"/>

    <style name="AppBaseTheme.Harucon2017">
        <item name="android:dialogTheme">@style/AppDialogTheme.Harucon2017</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Harucon2017</item>
        <item name="colorAccent">@color/harucon2017_turquoise</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorLink">@color/harucon2017_red</item>

        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Harucon2016</item>

        <item name="notificationSmallIcon">@drawable/harucon2017_notification_small</item>
        <item name="notificationLargeIcon">@mipmap/harucon2017_app_icon</item>

        <item name="toolbarBackground">@null</item>
        <item name="toolbarLogo">@drawable/ic_menu_black_24dp</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <item name="swipeToRefreshColor">@color/harucon2017_turquoise</item>
        <item name="navigationPopupSelectedColor">@color/harucon2017_turquoise</item>
        <item name="actionButtonColor">@color/harucon2017_turquoise</item>

        <item name="snackbarActionColor">@color/harucon2017_turquoise</item>

        <item name="aboutLogo">@drawable/amai_logo_black</item>

        <item name="eventTypeEndedColor">@color/ultra_light_gray</item>
        <item name="eventTimeDefaultTextColor">@color/black</item>
        <item name="eventTimeDefaultBackgroundColor">@color/harucon2017_turquoise</item>
        <item name="eventNameKeywordHighlightColor">@color/gold</item>
        <item name="eventDetailsColor">@color/even_darker_gray</item>
        <item name="eventSendFeedbackColor">@color/gold</item>

        <item name="eventTimeHeaderColor">@android:color/transparent</item>

        <item name="locationDetailsBackground">@color/transparent_black</item>
        <item name="floorBackground">@drawable/harucon2017_page_background</item>
        <item name="standIconColor">@color/harucon2017_turquoise</item>
        <item name="standsTypeTitleColor">@color/harucon2017_turquoise</item>

        <item name="focusedUpdateBackground">@color/transparent_yellow</item>
        <item name="newUpdateBackground">@color/transparent_black</item>
        <item name="updateTimeColor">@color/harucon2017_transparent_grayish</item>

        <item name="nextEventStartTimeBackground">@color/transparent_black</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>

        <!-- Note: if you change the theme, these values should be copied manually to files
         drawable\highlighted_button.xml and drawable/circular_progress_bar.xml because
         prior to L it was not supported to reference theme attributes from a drawable xml -->
        <item name="buttonColor">@color/harucon2017_turquoise</item>
        <item name="buttonColorPressed">@color/harucon2017_turquoise_bright</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="feedbackAnswerButtonColor">@color/harucon2017_red</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/harucon2017_orange</item>

        <item name="shadowForeground">@null</item>
        <item name="activitiesBackground">@drawable/harucon2017_page_background</item>

        <item name="navigationPopupNotSelectedColor">@android:color/white</item>

        <item name="eventToolbarColor">@color/harucon2017_gray</item>
        <item name="eventDetailsBoxColor">@color/transparent_dark_black</item>
        <item name="eventFeedbackBoxColor">@color/transparent_orange</item>
        <item name="eventDetailsTextColor">@color/black</item>
        <item name="eventDescriptionTextColor">@color/dark_gray</item>
        <item name="eventTitleTextColor">@color/white</item>
    </style>

    <style name="AppDialogTheme.Harucon2017" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/harucon2017_turquoise</item>
    </style>

    <style name="AppAlertDialogTheme.Harucon2017" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/harucon2017_turquoise</item>
    </style>

    <style name="AppBaseTheme.Harucon2017.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/harucon2017_page_background</item>
    </style>

    <style name="OverflowMenu.Harucon2016" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

</resources>