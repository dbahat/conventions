<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Icon2017.Toolbar"/>
    <style name="AppBaseTheme.Icon2017">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Icon2017</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Icon2017</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Icon2017</item>
        <!-- General -->
        <item name="colorAccent">@color/icon2017_green</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorLink">@color/icon2017_green</item>
        <item name="actionButtonColor">@color/icon2017_dark_red</item>
        <item name="swipeToRefreshColor">@color/icon2017_dark_red</item>
        <item name="snackbarActionColor">@color/icon2017_green</item>
        <item name="highlightedButtonBackground">@drawable/icon2017_highlighted_button</item>
        <item name="borderlessButtonColor">@color/icon2017_green</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="feedbackAnswerButtonColor">@color/icon2017_brown</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/icon2017_green</item>
        <item name="shadowForeground">@null</item>
        <item name="activitiesBackground">@drawable/icon2017_page_background</item>
        <item name="eventListDivider">@drawable/event_list_divider</item>
        <item name="conflictingEventListDivider">@drawable/conflicting_event_list_divider</item>
        <!-- Note: if you change the theme, these values should be copied manually to file
         ?highlightedButtonBackground (non-v21) because prior to L it was not supported to reference
         theme attributes from a drawable xml -->
        <item name="buttonColor">@color/icon2017_dark_green</item>
        <item name="buttonColorPressed">@color/icon2017_green</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/icon2017_notification_small</item>
        <item name="notificationLargeIcon">@mipmap/icon2017_app_icon</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarLogo">@drawable/ic_menu_black_24dp</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/icon2017_very_dark_green</item>
        <item name="navigationPopupTitle">@drawable/icon_logo_white</item>
        <item name="navigationPopupBottomImage">@null</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/icon2017_green</item>
        <item name="navigationPopupSeparatorColor">@color/white</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/icon_logo</item>
        <!-- Home Screen -->
        <item name="homeBackground">@color/icon2017_light_green</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeLogo">@drawable/icon2017_home_logo</item>
        <item name="homeBottomImage">@drawable/icon2017_characters</item>
        <item name="homeTitleBackground">@color/icon2017_dark_green</item>
        <item name="homeTitleText">@color/white</item>
        <item name="homeMessageBackground">@color/icon2017_dark_red</item>
        <item name="homeMessageText">@color/white</item>
        <item name="homeCurrentEventBackground">?homeMessageBackground</item>
        <item name="homeUpcomingEventBackground">@color/icon2017_brown</item>
        <item name="homeButtonBackground">@drawable/icon2017_home_activity_button</item>
        <item name="homeButtonText">@color/white</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/ultra_light_gray</item>
        <item name="eventTimeDefaultTextColor">@color/white</item>
        <item name="eventTimeDefaultBackgroundColor">@color/icon2017_dark_green</item>
        <item name="eventDetailsColor">@color/even_darker_gray</item>
        <item name="eventSendFeedbackColor">@color/gold</item>
        <item name="eventFavoriteIcon">@drawable/ic_star_black_24dp</item>
        <item name="eventNonFavoriteColor">@color/black</item>
        <item name="eventFavoriteColor">@color/gold</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/icon2017_light_green</item>
        <item name="locationDetailsTitleColor">@color/white</item>
        <item name="mapBackground">@color/icon2017_lighter_green</item>
        <item name="standIconColor">@color/icon2017_dark_green</item>
        <item name="standsTypeTitleColor">@color/icon2017_dark_green</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@color/transparent_yellow</item>
        <item name="newUpdateBackground">@color/transparent_black</item>
        <item name="updateTimeColor">@color/transparent_black</item>
        <item name="updateItemBorder">@color/icon2017_dark_green</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/transparent_black</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/icon2017_light_green</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/icon2017_light_green</item>
        <item name="eventDetailsBoxColor">@color/transparent_dark_black</item>
        <item name="eventFeedbackBoxColor">@color/icon2017_transparent_dark_red</item>
        <item name="eventDescriptionTextColor">@color/dark_gray</item>
        <item name="eventTitleBackground">@drawable/icon2017_event_title_background</item>
        <item name="eventTitleTextColor">@color/white</item>
        <item name="eventDetailsHighlightedTextColor">@color/light_yellow</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/icon2017_rotating_circular_progress_bar</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@null</item>
        <!-- Second Hand Screen -->
        <item name="secondHandFormClosedColor">@color/dark_gray</item>
        <item name="secondHandItemSoldColor">@color/icon2017_green</item>
        <item name="secondHandItemMissingColor">@color/icon2017_dark_red</item>
    </style>

    <style name="AppBaseTheme.Icon2017.Toolbar.Event" parent="AppBaseTheme.Icon2017.Toolbar">
    </style>


    <style name="AppDialogTheme.Icon2017" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/icon2017_green</item>
    </style>

    <style name="AppAlertDialogTheme.Icon2017" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/icon2017_green</item>
    </style>

    <style name="AppBaseTheme.Icon2017.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/icon2017_splash_background</item>
    </style>
    <style name="OverflowMenu.Icon2017" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
</resources>