<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Harucon2022" parent="AppBaseTheme.Light">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Harucon2022</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Harucon2022</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Harucon2022</item>
        <!-- General -->
        <item name="android:colorPrimaryDark">@color/black</item> <!-- Toolbar color -->
        <item name="colorAccent">@color/harucon2022_light_yellow</item>
        <item name="android:textColorPrimary">@color/harucon2022_dark_blue</item>
        <item name="android:textColorSecondary">@color/harucon2022_dark_blue</item>
        <item name="android:textColorHint">@color/harucon2022_light_yellow</item>
        <item name="android:textColorLink">@color/harucon2022_light_yellow</item>
        <item name="actionButtonColor">@color/harucon2022_dark_blue</item>
        <item name="actionButtonIcon">@drawable/harucon2022_search</item>
        <item name="hintTextColor">@color/harucon2022_light_yellow</item>
        <item name="swipeToRefreshColor">@color/harucon2022_pink</item>
        <item name="snackbarActionColor">@color/harucon2022_pink</item>
        <item name="borderlessButtonColor">@color/harucon2022_light_yellow</item>
        <item name="activitiesBackground">@drawable/harucon2022_default_background</item>
        <item name="eventListDivider">@drawable/harucon2022_event_list_divider</item>
        <item name="separatorColor">@color/harucon2022_light_yellow</item>
        <!-- These are used for buttons. They should be usable when the background is:
             Event screen feedback
             Event screen vote
             Feedback screen
             Map bottom info panel
             Arrival methods screen
         -->
        <item name="buttonColor">@color/harucon2022_dark_blue</item>
        <item name="buttonColorPressed">@color/harucon2022_light_blue</item>
        <item name="buttonColorDisabled">@color/harucon2022_gray_blue</item>
        <item name="buttonTextColor">@drawable/harucon2022_highlighted_button_text_color</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/harucon_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@color/harucon2022_pink</item>
        <item name="toolbarIconAccentColor">@color/harucon2022_light_yellow</item>
        <item name="toolbarTitleColor">@color/harucon2022_dark_blue</item>
        <!-- Navigation Drawer -->
        <item name="navigationPopupBackground">@drawable/harucon2022_navigation_background</item>
        <item name="navigationPopupSpaceVisibility">gone</item>
        <item name="navigationPopupTitle">@drawable/harucon2022_logo</item>
        <item name="navigationPopupBottomImage">@drawable/harucon2022_navigation_bottom</item>
        <item name="navigationPopupTopSelectedColor">@color/harucon2022_dark_red</item>
        <item name="navigationPopupTopNotSelectedColor">@color/harucon2022_light_yellow</item>
        <item name="navigationPopupNotSelectedColor">@color/harucon2022_light_yellow</item>
        <item name="navigationPopupSelectedColor">@color/harucon2022_dark_red</item>
        <item name="navigationPopupSeparatorColor">@color/harucon2022_light_yellow</item>
        <item name="navigationPopupBottomImageMargins">20dp</item>
        <item name="navigationPopupBottomImageTopMargin">10dp</item>
        <item name="navigationPopupTitleWidth">170dp</item>
        <item name="navigationItemsShouldDisplayIcon">false</item>
        <item name="navigationPopupItemPaddingTop">5dp</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_black</item>
        <item name="aboutLogoMargins">80dp</item>
        <!-- Home Screen -->
        <item name="homeLogoMargin">20dp</item>
        <item name="homeLogo">@drawable/harucon2022_home_image</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@drawable/harucon2022_home_background</item>
        <item name="homeToolbarTitle">@drawable/harucon2022_logo_small</item>
        <item name="homeToolbarBackground">@null</item>
        <item name="homeTitleBackground">@null</item>
        <item name="homeTitleText">@color/harucon2022_dark_blue</item>
        <item name="homeMessageBackground">@drawable/harucon2022_home_message_background</item>
        <item name="homeMessageText">@color/white</item>
        <item name="homeEventTimeText">@color/harucon2022_dark_blue</item>
        <item name="homeEventHallText">@color/harucon2022_dark_blue</item>
        <item name="homeCurrentEventBackground">@color/white</item>
        <item name="homeCurrentEventText">@color/harucon2022_dark_blue</item>
        <item name="homeUpcomingEventBackground">@drawable/harucon2022_home_message_background</item>
        <item name="homeButtonBackground">@drawable/harucon2022_home_button</item>
        <item name="homeButtonText">@color/white</item>
        <item name="homeEventNameInList">@color/white</item>
        <item name="homeEventsListDivider">@drawable/harucon2022_home_event_list_divider</item>
        <item name="homeBoxTopMargin">10dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeUpcomingPadding">@null</item>
        <item name="homeUpcomingPaddingTop">@null</item>
        <item name="homeUpcomingMarginBottom">@null</item>
        <item name="homeFrameTopMargin">10dp</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/harucon2022_dark_red</item>
        <item name="eventTypeEndedBackgroundColor">@color/harucon2022_dark_blue</item>
        <item name="eventTypeCurrentColor">@color/harucon2022_dark_blue</item>
        <item name="eventTypeCurrentBackgroundColor">@color/harucon2022_dark_red</item>
        <item name="eventTypeNotStartedColor">@color/harucon2022_dark_blue</item>
        <item name="eventNameKeywordHighlightColor">@color/harucon2022_light_yellow</item>
        <item name="eventKeywordHighlightColor">@color/harucon2022_light_yellow</item>
        <item name="eventTimeDefaultTextColor">@color/harucon2022_light_yellow</item>
        <item name="eventTimeDefaultBackgroundColor">@color/harucon2022_dark_blue</item>
        <item name="eventDetailsColorEnded">?eventTypeEndedColor</item>
        <item name="eventDetailsColorCurrent">?eventTypeCurrentColor</item>
        <item name="eventDetailsColorNotStarted">?eventTypeNotStartedColor</item>
        <item name="eventSendFeedbackColor">@color/harucon2022_light_yellow</item>
        <item name="eventSentFeedbackColor">@color/harucon2022_light_yellow</item>
        <item name="eventNonFavoriteColor">@drawable/harucon2022_non_favorite_icon</item>
        <item name="eventFavoriteColor">@drawable/harucon2022_favorite_icon</item>
        <item name="eventAlertsIconColor">@color/harucon2022_light_yellow</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@drawable/harucon2022_frame</item>
        <item name="eventTimeHeaderAlwaysUseDefaultTextColor">true</item>
        <item name="eventTimeHeaderDefaultTextColor">@color/harucon2022_light_yellow</item>
        <item name="eventTimeHeaderMarginTop">10dp</item>
        <item name="eventTimeHeaderMarginBottom">0dp</item>
        <item name="eventTimeHeaderPaddingHorizontal">@null</item>
        <item name="eventTimeHeaderPaddingVertical">@null</item>
        <item name="marginBetweenEventsListAndNextHeader">0dp</item>
        <item name="fabOnProgrammeTop">true</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@null</item>
        <item name="nextEventStartTimeTextColor">@color/harucon2022_light_yellow</item>
        <item name="conflictingEventsBackground">@null</item>
        <item name="nextEventStartTimeBottomLineColor">@color/harucon2022_light_yellow</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/harucon2022_rotating_circular_progress_bar</item>
        <item name="conventionFeedbackTextColor">@color/harucon2022_dark_blue</item>
        <item name="feedbackAnswerButtonColor">@color/harucon2022_purple</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/harucon2022_light_yellow</item>
        <item name="feedbackMultiAnswerBackgroundSelected">@drawable/harucon2022_feedback_selected_answer_bg</item>
        <item name="feedbackMultiAnswerBackgroundNotSelected">@drawable/harucon2022_feedback_answer_bg</item>
        <item name="feedbackMultiAnswerPaddingTopBottom">4dp</item>
        <item name="feedbackMultiAnswerPaddingStartEnd">9dp</item>
        <item name="feedbackMultiAnswerPaddingStartFirstAnswer">9dp</item>
        <item name="feedbackMultiAnswerMarginTopBottom">2dp</item>
        <item name="feedbackMultiAnswerMarginBetweenAnswers">9dp</item>
        <!-- Updates Screen -->
        <item name="updateTimeColor">@android:color/transparent</item>
        <item name="updateTimeBackground">@null</item>
        <item name="updateItemBorder">@color/harucon2022_light_yellow</item>
        <item name="updateItemSeparator">@color/harucon2022_light_yellow</item>
        <item name="updateTextColor">@color/harucon2022_dark_blue</item>
        <item name="newUpdateTextColor">@color/white</item>
        <item name="newUpdateBackground">@null</item>
        <item name="focusedUpdateTextColor">@color/harucon2022_dark_blue</item>
        <item name="focusedUpdateBackground">@color/harucon2022_dark_red</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/harucon2022_pink</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/harucon2022_light_blue</item>
        <item name="eventTitleBackground">@drawable/harucon2022_frame_bg</item>
        <item name="eventTitlePadding">@null</item>
        <item name="eventTitleTextColor">@color/harucon2022_light_yellow</item>
        <item name="eventDetailsBoxColor">@android:color/transparent</item>
        <item name="eventFeedbackBoxColor">@color/harucon2022_dark_red</item>
        <item name="eventVoteBoxColor">@color/harucon2022_blue</item>
        <item name="eventVoteTextColor">@color/harucon2022_light_yellow</item>
        <item name="eventDescriptionBoxColor">@color/harucon2022_transparent_dark_blue</item>
        <item name="feedbackButtonColor">@color/harucon2022_light_yellow</item>
        <item name="eventSurveyAnswerColor">@color/harucon2022_purple</item>
        <item name="eventSurveySelectedAnswerColor">@color/harucon2022_pink</item>
        <!-- Map Screen -->
        <item name="mapBackground">@drawable/harucon2022_default_background</item>
        <item name="standIconColor">@color/harucon2022_red</item>
        <item name="standsTypeTitleColor">@color/harucon2022_red</item>
        <item name="locationDetailsBackground">@color/transparent_white</item>
        <item name="locationDetailsTopLineColor">@color/black</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="iconClearMap">@drawable/ic_clear_black</item>
        <item name="iconFloorUp">@drawable/arrow_up_wide</item>
        <item name="iconFloorDown">@drawable/arrow_down_wide</item>
        <item name="floorChangeBackground">@color/transparent_white</item>
        <item name="floorUpDownTextColor">@color/black</item>
    </style>

    <style name="AppBaseTheme.Harucon2022.Event" parent="AppBaseTheme.Harucon2022">
        <item name="android:textColorLink">@color/harucon2022_pink</item>
    </style>

    <style name="AppDialogTheme.Harucon2022" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/harucon2022_dark_red</item>
        <item name="borderlessButtonColor">@color/harucon2022_dark_red</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppAlertDialogTheme.Harucon2022" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/harucon2022_dark_red</item>
        <item name="borderlessButtonColor">@color/harucon2022_dark_red</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Harucon2022.Splash">
        <item name="android:windowBackground">@drawable/harucon2022_home_background</item>
    </style>

    <style name="OverflowMenu.Harucon2022" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
</resources>