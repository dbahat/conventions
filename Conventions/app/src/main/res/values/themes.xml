<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="swipeToRefreshColor">?toolbarBackground</item>
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>

        <item name="eventTypeEndedColor">@color/gray</item>
        <item name="eventTypeCurrentColor">@color/light_yellow</item>
        <item name="eventTypeNotStartedColor">@color/white</item>
        <item name="eventNameKeywordHighlightColor">@color/black</item>
        <item name="eventKeywordHighlightColor">@color/black</item>
        <item name="eventDetailsColor">@color/dark_gray</item>
        <item name="eventSendFeedbackColor">@color/green</item>

        <item name="nextEventStartTimeBottomLineColor">@android:color/black</item>
        <item name="conflictingEventsBackground">@color/dark_gray</item>

        <item name="navigationPopupNotSelectedColor">@android:color/black</item>

        <item name="eventTimeHeaderColor">@color/ultra_light_gray2</item>

        <item name="updateTimeColor">@color/ultra_light_gray</item>
        <item name="updatesBackground">?android:colorBackground</item>
        <item name="newUpdateBackground">@color/very_light_gray</item>

        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTopLineColor">@android:color/black</item>

        <item name="eventToolbarColor">?toolbarBackground</item>
        <item name="eventDetailsBoxColor">@color/transparent_white</item>
        <item name="eventDescriptionTextColor">?android:textColorPrimary</item>
        <item name="eventDetailsTextColor">?android:textColorPrimary</item>
        <item name="eventTitleTextColor">?android:textColorPrimary</item>
        <item name="eventFeedbackBoxColor">@color/transparent_light_yellow</item>
        <item name="eventFeedbackTextColor">?attr/eventDescriptionTextColor</item>
        <!-- This color should match eventDetailsBoxColor in a way that eventDetailsBoxColor is not visible
             on top of this color -->
        <item name="eventDetailsDefaultBackgroundColor">@color/white</item>
        <item name="conventionFeedbackTextColor">?android:textColorPrimary</item>

        <item name="shadowForeground">@drawable/bottom_shadow</item>
        <item name="activitiesBackground">@null</item>
        <item name="actionButtonColor">?colorAccent</item>
    </style>

    <style name="FullScreenDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>