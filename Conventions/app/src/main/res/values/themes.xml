<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Since there is no multiple inheritance with themes, we have to copy basic attributes to have
         similar light and dark themes.
         The attributes defined in this theme (except for the parent) should be exactly the same as in
         AppBaseTheme.Light.Base -->
    <style name="AppBaseTheme.Dark.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <!--We use the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:colorBackground">@null</item>
        <item name="numberPickerTheme">@style/AppBaseTheme.NumberPickerTheme</item>

        <!-- General attributes -->
        <item name="swipeToRefreshColor">?toolbarBackground</item>
        <item name="swipeToRefreshBackgroundColor">@color/white</item>
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
        <item name="activitiesBackground">@null</item>
        <item name="actionButtonColor">?colorAccent</item>
        <item name="borderlessButtonColor">?buttonColor</item>
        <item name="highlightedButtonTextColor">@color/white</item>
        <item name="eventStartMargin">0dp</item>
        <item name="eventEndMargin">0dp</item>
        <item name="contentStartMargin">0dp</item>
        <item name="contentEndMargin">0dp</item>

        <!-- Toolbar -->
        <item name="toolbarTitleColor">?android:textColorPrimary</item>

        <!-- Tabs -->
        <item name="selectedTabIndicatorColor">?snackbarActionColor</item>
        <item name="unselectedTabTextColor">?android:textColorPrimary</item>
        <item name="selectedTabTextColor">?android:textColorSecondary</item>

        <!-- Event list activities -->
        <item name="eventTimeHeaderBackground">@drawable/flat_event_time_background</item>
        <item name="eventTypeEndedColor">@color/gray</item>
        <item name="eventTypeCurrentColor">@color/light_yellow</item>
        <item name="eventTypeNotStartedColor">@color/white</item>
        <item name="eventTypeEndedBackgroundColor">@null</item>
        <item name="eventTypeCurrentBackgroundColor">@null</item>
        <item name="eventTypeNotStartedBackgroundColor">@null</item>
        <item name="eventTimeDefaultBackgroundColor">@null</item>
        <item name="eventTimeAlwaysUseDefaultBackgroundColor">false</item>
        <item name="eventSendFeedbackColor">@color/green</item>
        <item name="eventSentFeedbackColor">@color/yellow</item>
        <item name="eventFeedbackDefaultColor">?eventDetailsColor</item>
        <item name="eventFavoriteIcon">@drawable/ic_star_black_24dp</item>
        <item name="eventAlertsIcon">@drawable/ic_action_alarms</item>

        <!-- Navigation popup -->
        <item name="navigationPopupSeparatorColor">?navigationPopupNotSelectedColor</item>
        <item name="navigationPopupBottomImageMargins">31dp</item>
        <item name="navigationPopupTitleMargins">0dp</item>

        <!-- Home -->
        <item name="homeActivityLayout">@layout/activity_home</item>
        <item name="homeToolbarBackground">?toolbarBackground</item>
        <item name="homeBoxTopMargin">0dp</item>
        <item name="homeSingleButtonTopMargin">0dp</item>
        <item name="homeButtonsSideMargin">0dp</item>
        <item name="homeSingleButtonStyle">@style/HomeButton.Single</item>
        <item name="homeEventTimeText">?homeMessageText</item>
        <item name="homeCurrentEventText">?homeMessageText</item>
        <item name="homeCurrentEventOnlyBackground">?homeCurrentEventBackground</item>
        <item name="homeEventsListDivider">@drawable/home_event_list_divider</item>
        <item name="homeLogoMargin">10dp</item>
        <item name="homeShowButtons">true</item>
        <item name="homeTitleSize">32sp</item>

        <!-- About -->
        <item name="aboutLogoMargins">20dp</item>

        <!-- Updates -->
        <item name="updatesBackgroundDrawable">?activitiesBackground</item>
        <item name="updatesBackground">?android:colorBackground</item>
        <item name="updateItemSeparator">?separatorColor</item>
        <item name="updateTextColor">?android:textColorPrimary</item>
        <item name="newUpdateTextColor">?android:textColorPrimary</item>
        <item name="focusedUpdateTextColor">?android:textColorPrimary</item>

        <!-- Map -->
        <item name="mapBackground">?activitiesBackground</item>
        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTitleColor">?android:textColorPrimary</item>
        <item name="mapToolbarColor">?toolbarBackground</item>
        <item name="floorChangeBackground">?locationDetailsBackground</item>

        <!-- Event activity -->
        <item name="eventToolbarColor">?toolbarBackground</item>
        <item name="eventDescriptionTextColor">?eventTitleTextColor</item>
        <item name="eventDetailsTextColor">?eventTitleTextColor</item>
        <item name="feedbackButtonColor">?borderlessButtonColor</item>
        <item name="eventTitleTextColor">?android:textColorPrimary</item>
        <item name="eventFeedbackTextColor">?attr/eventDescriptionTextColor</item>
        <item name="eventVoteBoxColor">?eventFeedbackBoxColor</item>
        <item name="eventDescriptionBoxColor">?eventDetailsBoxColor</item>
        <item name="eventActivityFavoriteColor">@color/gold</item>
        <item name="eventSurveyTextColor">@color/black</item>

        <!-- Feedback activity -->
        <item name="conventionFeedbackTextColor">?eventTitleTextColor</item>
        <item name="feedbackMultiAnswerPadding">4.5dp</item>

        <!-- Programme Activity -->
        <item name="fabOnProgrammeTop">false</item>
    </style>

