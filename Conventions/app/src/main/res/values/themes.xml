<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>

        <item name="eventTypeEndedColor">@color/ultra_light_gray</item>
        <item name="eventTypeCurrentColor">@color/light_yellow</item>
        <item name="eventTypeNotStartedColor">@color/white</item>

        <item name="nextEventStartTimeBottomLineColor">@android:color/black</item>
        <item name="conflictingEventsBackground">@color/dark_gray</item>

        <item name="navigationPopupNotSelectedColor">@android:color/black</item>

        <item name="eventTimeHeaderColor">@color/very_light_gray</item>
        <item name="eventTimeHeaderBackground">@drawable/event_time_header_background</item>

        <item name="updateTimeColor">@color/ultra_light_gray</item>
        <item name="updatesBackground">@color/white</item>

        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTopLineColor">@android:color/black</item>

        <item name="eventDetailsBoxColor">@color/transparent_white</item>
        <item name="eventFeedbackBoxColor">@color/transparent_light_yellow</item>
    </style>

    <style name="AppBaseTheme.Cami2015.Toolbar"/>

    <style name="AppBaseTheme.Cami2015">
        <item name="notificationSmallIcon">@drawable/cami_logo_small_white</item>
        <item name="notificationLargeIcon">@drawable/cami_logo_app_icon</item>
        <item name="toolbarBackground">@color/maroon</item>
        <item name="toolbarLogo">@drawable/cami_logo_toolbar</item>
        <item name="toolbarLogoType">bitmap</item>
        <item name="toolbarIconAccentColor">@color/light_green</item>
        <item name="navigationPopupSelectedColor">@color/maroon</item>

        <item name="appLogoHome">@drawable/cami_logo</item>
        <item name="mapHomeImage">@drawable/home_cami_map</item>
        <item name="eventsHomeImage">@drawable/home_cami_events</item>
        <item name="updatesHomeImage">@drawable/home_cami_updates</item>
        <item name="arrivalMethodsHomeImage">@drawable/home_cami_arrival_methods</item>

        <item name="floorBackground">@color/orange</item>

        <item name="nextEventStartTimeBackground">@color/orange</item>
        <item name="nextEventStartTimeTextColor">@android:color/black</item>


        <item name="eventDetailsDefaultBackgroundColor">@color/white</item>
        <!-- Note: if you change the theme, these values should be copied manually to file drawable\feedback_highlighted_button.xml
         because prior to L it was not supported to reference theme attributes from a drawable xml -->
        <item name="eventFeedbackHighlightedButtonColor">@color/maroon</item>
        <item name="eventFeedbackHighlightedButtonPressedColor">@color/dark_maroon</item>
        <item name="feedbackAnswerButtonColor">@color/maroon</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/dark_orange</item>
    </style>

    <style name="AppBaseTheme.Harucon2016.Toolbar"/>

    <style name="AppBaseTheme.Harucon2016" parent="AppBaseTheme.Cami2015">
        <item name="toolbarBackground">@color/dark_blue</item>
        <item name="toolbarLogo">@drawable/harucon2016_logo_toolbar</item>
        <item name="toolbarLogoType">bitmap</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <item name="navigationPopupSelectedColor">@color/dark_blue</item>

        <item name="floorBackground">@color/orange</item>

        <item name="nextEventStartTimeBackground">@color/light_purple</item>
        <item name="nextEventStartTimeTextColor">@color/white</item>

        <item name="eventDetailsDefaultBackgroundColor">@color/white</item>
        <!-- Note: if you change the theme, these values should be copied manually to file drawable\feedback_highlighted_button.xml
         because prior to L it was not supported to reference theme attributes from a drawable xml -->
        <item name="eventFeedbackHighlightedButtonColor">@color/dark_purple_button</item>
        <item name="eventFeedbackHighlightedButtonPressedColor">@color/very_dark_purple_button</item>
        <item name="feedbackAnswerButtonColor">@color/dark_purple</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/purple</item>
    </style>
</resources>