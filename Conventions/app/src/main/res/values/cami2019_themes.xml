<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Cami2019.Toolbar" parent="AppBaseTheme.Cami2019"/>

    <style name="AppBaseTheme.Cami2019" parent="AppBaseTheme.Dark">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Cami2019</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Cami2019</item>
        <item name="numberPickerTheme">@style/AppBaseTheme.Cami2019.Toolbar.NumberPickerTheme</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Cami2019</item>
        <!-- General -->
        <item name="colorAccent">@color/cami2019_brown3</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorHint">@color/very_dark_gray</item>
        <item name="android:textColorLink">@color/cami2019_teal</item>
        <item name="actionButtonColor">@color/cami2019_brown3</item>
        <item name="hintTextColor">@color/cami2019_brown3</item>
        <item name="swipeToRefreshColor">@color/cami2019_brown3</item>
        <item name="snackbarActionColor">@color/cami2019_orange2</item>
        <item name="highlightedButtonBackground">@drawable/cami2019_highlighted_button</item>
        <item name="highlightedButtonTextColor">@drawable/cami2019_highlighted_button_text_color</item>
        <item name="borderlessButtonColor">@color/cami2019_brown3</item>
        <item name="activitiesBackground">@color/white</item>
        <item name="eventListDivider">@drawable/cami2019_event_list_divider</item>
        <!-- Note: if you change the theme, these values should be copied manually to file
         ?highlightedButtonBackground (non-v21) because prior to L it was not supported to reference
         theme attributes from a drawable xml -->
        <item name="buttonColor">@color/cami2019_yellow</item>
        <item name="buttonColorPressed">@color/cami2019_dark_yellow</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/cami_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@color/cami2019_brown3</item>
        <item name="toolbarLogo">@drawable/ic_menu_white_24dp</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/cami2019_black2</item>
        <item name="navigationPopupTitle">@drawable/cami2019_logo</item>
        <item name="navigationPopupBottomImage">@drawable/cami2019_navigation_placeholder</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/cami2019_orange2</item>
        <item name="navigationPopupSeparatorColor">@null</item>
        <item name="navigationPopupBottomImageMargins">0dp</item>
        <item name="navigationPopupTitleMargins">20dp</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_black</item>
        <item name="aboutLogoMargins">80dp</item>
        <!-- Home Screen -->
        <item name="homeActivityLayout">@layout/cami2019_activity_home</item>
        <item name="homeToolbarBackground">@drawable/cami2019_home_toolbar_background</item>
        <item name="homeLogoMargin">0dp</item>
        <item name="homeLogo">@drawable/cami2019_home_cover</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@color/white</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeTitleBackground">@drawable/cami2019_home_title</item>
        <item name="homeTitleText">@color/white</item>
        <item name="homeTitleSize">28sp</item>
        <item name="homeMessageBackground">@drawable/cami2019_home_info</item>
        <item name="homeMessageText">@color/white</item>
        <item name="homeEventTimeText">@color/white</item>
        <item name="homeCurrentEventBackground">@drawable/cami2019_current_event</item>
        <item name="homeCurrentEventText">@color/white</item>
        <item name="homeUpcomingEventBackground">@drawable/cami2019_upcoming_event</item>
        <item name="homeButtonBackground">@color/white</item>
        <item name="homeButtonText">@color/white</item>
        <item name="homeEventNameInList">@color/white</item>
        <item name="homeEventsListDivider">@drawable/cami2019_home_event_list_divider</item>
        <item name="homeBoxTopMargin">3dp</item>
        <item name="homeSingleButtonTopMargin">0dp</item>
        <item name="homeShowButtons">false</item>
        <item name="homeSingleButtonStyle">@style/HomeButton.Single.Cami2019</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/cami2019_gray</item>
        <item name="eventTypeEndedBackgroundColor">@null</item>
        <item name="eventTypeCurrentColor">@color/cami2019_tan</item>
        <item name="eventTypeCurrentBackgroundColor">@null</item>
        <item name="eventTypeNotStartedColor">@color/black</item>
        <item name="eventNameKeywordHighlightColor">@color/cami2019_dark_yellow</item>
        <item name="eventKeywordHighlightColor">@color/cami2019_dark_yellow</item>
        <item name="eventTimeDefaultTextColor">@color/black</item>
        <item name="eventTimeDefaultBackgroundColor">@color/cami2019_brown3</item>
        <item name="eventDetailsColor">@color/black</item>
        <item name="eventSendFeedbackColor">@color/cami2019_yellow</item>
        <item name="eventSentFeedbackColor">@color/cami2019_yellow</item>
        <item name="eventFeedbackDefaultColor">?eventTypeEndedColor</item>
        <item name="eventFavoriteIcon">@null</item>
        <item name="eventNonFavoriteColor">@drawable/cami2019_favorite_empty</item>
        <item name="eventFavoriteColor">@drawable/cami2019_favorite_full</item>
        <item name="eventAlertsIcon">@drawable/cami2019_alerts_icon</item>
        <!-- Map Screen -->
        <item name="mapBackground">@drawable/cami2019_map_background</item>
        <item name="standIconColor">@color/cami2019_brown3</item>
        <item name="standsTypeTitleColor">@color/cami2019_brown3</item>
        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTopLineColor">@color/black</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="iconClear">@drawable/ic_clear_black</item>
        <item name="iconFloorUp">@drawable/arrow_up_wide</item>
        <item name="iconFloorDown">@drawable/arrow_down_wide</item>
        <item name="floorChangeBackground">@color/transparent_white</item>
        <!-- Updates Screen -->
        <item name="updateTimeColor">@android:color/transparent</item>
        <item name="updateTimeBackground">@null</item>
        <item name="updateItemBorder">@color/black</item>
        <item name="updateItemSeparator">@color/black</item>
        <item name="updateTextColor">@color/black</item>
        <item name="newUpdateTextColor">@color/cami2019_dark_yellow</item>
        <item name="newUpdateBackground">@null</item>
        <item name="focusedUpdateTextColor">@color/cami2019_dark_yellow</item>
        <item name="focusedUpdateBackground">@null</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/transparent_black</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>
        <!-- Event Screen -->
        <item name="eventDetailsDefaultBackgroundColor">@color/white</item>
        <item name="eventTitleBackground">@drawable/cami2019_event_details_background</item>
        <item name="eventTitleTextColor">@color/white</item>
        <item name="eventDetailsBoxColor">@drawable/cami2019_event_details_background</item>
        <item name="eventFeedbackBoxColor">@color/cami2019_transparent_green</item>
        <item name="eventVoteBoxColor">@color/cami2019_transparent_brown</item>
        <item name="eventDescriptionBoxColor">@drawable/cami2019_event_description_background</item>
        <item name="feedbackButtonColor">@color/white</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/cami2019_rotating_circular_progress_bar</item>
        <item name="conventionFeedbackTextColor">@color/black</item>
        <item name="feedbackAnswerButtonColor">@color/cami2019_gray2</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/cami2019_yellow</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@color/cami2019_brown3</item>
        <item name="eventTimeHeaderDefaultTextColor">@color/white</item>
    </style>

    <style name="AppBaseTheme.Cami2019.Toolbar.Event" parent="AppBaseTheme.Cami2019.Toolbar">
        <item name="android:textColorLink">@color/cami2019_teal</item>
    </style>

    <style name="AppDialogTheme.Cami2019" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/cami2019_brown3</item>
        <item name="borderlessButtonColor">@color/cami2019_brown3</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppAlertDialogTheme.Cami2019" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cami2019_brown3</item>
        <item name="borderlessButtonColor">@color/cami2019_brown3</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Cami2019.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/cami2019_splash</item>
    </style>

    <style name="OverflowMenu.Cami2019" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <!-- Workaround for number picker font color issue when the theme is dark -->
    <style name="AppBaseTheme.Cami2019.Toolbar.NumberPickerTheme" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="HomeButton.Single.Cami2019">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>