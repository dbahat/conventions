        <item name="navigationPopupSeparatorColor">@color/icon2021_yellow1</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/icon2021_title</item>
        <item name="aboutLogoMargins">20dp</item>
        <!-- Home Screen -->
        <item name="homeBoxTopMargin">0dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeButtonsSideMargin">15dp</item>
        <item name="homeBackground">@drawable/icon2021_background</item>
        <item name="homeLogo">@drawable/icon2021_title</item>
        <item name="homeLogoMargin">0dp</item>
        <item name="homeFrameTopMargin">5dp</item>
        <item name="homeFrameBottomMargin">5dp</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeTitleBackground">@color/icon2021_blue1</item>
        <item name="homeTitleText">@color/white</item>
        <item name="homeMessageBackground">@color/icon2021_yellow3</item>
        <item name="homeMessageText">@color/black</item>
        <item name="homeCurrentEventBackground">@color/icon2021_yellow2</item>
        <item name="homeCurrentEventText">@color/black</item>
        <item name="homeUpcomingEventBackground">@color/icon2021_yellow3</item>
        <item name="homeButtonBackground">@drawable/icon2021_home_activity_button</item>
        <item name="homeButtonText">@color/icon2021_blue1</item>
        <item name="homeBottomImage">@drawable/icon2021_home_bottom</item>
        <item name="homeEventNameInList">@color/black</item>
        <item name="homeEventsListDivider">@drawable/icon2021_home_event_list_divider</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/icon2021_blue2</item>
        <item name="eventTypeCurrentColor">@color/icon2021_blue1</item>
        <item name="eventTypeNotStartedColor">@color/icon2021_yellow1</item>
        <item name="eventTimeDefaultTextColor">@color/white</item>
        <item name="eventTimeDefaultBackgroundColor">@color/icon2021_yellow1</item>
        <item name="eventDetailsColorNotStarted">@color/icon2021_yellow1</item>
        <item name="eventDetailsColorCurrent">@color/icon2021_blue1</item>
        <item name="eventDetailsColorEnded">@color/icon2021_blue2</item>
        <item name="eventSendFeedbackColor">@color/icon2021_yellow2</item>
        <item name="eventSentFeedbackColor">@color/icon2021_yellow2</item>
        <item name="eventNonFavoriteColor">@color/icon2021_yellow1</item>
        <item name="eventFavoriteColor">@color/icon2021_blue1</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/white</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="mapBackground">@drawable/icon2021_background</item>
        <item name="floorChangeBackground">@color/very_transparent_white</item>
        <item name="standIconColor">@color/black</item>
        <item name="standsTypeTitleColor">@color/black</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@color/icon2021_blue3</item>
        <item name="newUpdateBackground">@android:color/transparent</item>
        <item name="updateItemBorder">@color/icon2021_blue2</item>
        <item name="updateTextColor">@color/black</item>
        <item name="newUpdateTextColor">@color/icon2021_blue1</item>
        <item name="focusedUpdateTextColor">@color/black</item>
        <item name="updateItemSeparator">@null</item>
        <item name="updateTimeBackground">@color/icon2021_blue2</item>
        <item name="updateTimeColor">@color/icon2021_blue1</item>
        <item name="updatesSeparatorColor">@android:color/transparent</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/icon2021_blue3</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>
        <item name="nextEventStartTimeBottomLineColor">@android:color/transparent</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/icon2021_blue3</item>
        <item name="eventActivityFavoriteColor">@color/icon2021_yellow1</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/icon2021_blue3</item>
        <item name="eventTitleBackground">@color/icon2021_blue1</item>
        <item name="eventTitleTextColor">@color/white</item>
        <item name="eventDetailsBoxColor">@color/icon2021_yellow3</item>
        <item name="eventDetailsHighlightedTextColor">@color/icon2021_blue1</item>
        <item name="eventDescriptionTextColor">@color/black</item>
        <item name="eventFeedbackBoxColor">@color/icon2021_blue1</item>
        <item name="eventFeedbackTextColor">@color/white</item>
        <item name="feedbackButtonColor">@color/icon2021_yellow2</item>
