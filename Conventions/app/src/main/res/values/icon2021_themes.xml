        <item name="eventFeedbackSelectedAnswerColor">@color/icon2021_blue2</item>
        <item name="eventVoteBoxColor">@color/icon2021_blue2</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/icon2021_rotating_circular_progress_bar</item>
        <item name="feedbackAnswerButtonColor">@color/icon2021_yellow1</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/icon2021_blue1</item>
        <item name="conventionFeedbackTextColor">@color/black</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderAlwaysUseDefaultTextColor">false</item>
        <item name="eventTimeHeaderDefaultTextColor">@null</item>
        <item name="eventTimeHeaderBackground">@null</item>
        <item name="searchCategoriesColor">@color/icon2021_yellow1</item>
        <!-- Programme Search Screen -->
        <item name="eventNameKeywordHighlightColor">@color/icon2021_yellow3</item>
        <item name="eventKeywordHighlightColor">@color/icon2021_yellow3</item>
        <item name="searchDrawerAccentColor">@color/icon2021_yellow1</item>
        <!-- Second Hand Screen -->
        <item name="secondHandFormOpenColor">?eventTypeNotStartedColor</item>
        <item name="secondHandFormClosedColor">?eventTypeEndedColor</item>
        <item name="secondHandItemDefaultColor">?secondHandFormOpenColor</item>
        <item name="secondHandItemCreatedColor">?secondHandFormClosedColor</item>
        <item name="secondHandItemSoldColor">@color/green</item>
        <item name="secondHandItemMissingColor">@color/red</item>
        <item name="secondHandItemsDivider">@drawable/icon2021_second_hand_item_list_divider</item>
        <item name="secondHandFilterColor">?android:textColorPrimary</item>
        <!-- Discounts activity -->
        <item name="discountsActivityLayout">@layout/activity_discounts</item>
    </style>

    <style name="AppBaseTheme.Icon2021.Event" parent="AppBaseTheme.Icon2021">
        <item name="android:textColorLink">@color/icon2021_yellow1</item>
    </style>

    <style name="AppBaseTheme.Icon2021.Settings" parent="AppBaseTheme.Icon2021">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>


    <style name="AppDialogTheme.Icon2021" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/icon2021_yellow2</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/icon2021_yellow2</item>
    </style>

    <style name="AppAlertDialogTheme.Icon2021" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/icon2021_yellow2</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/icon2021_yellow2</item>
    </style>

    <style name="AppBaseTheme.Icon2021.Splash">
        <item name="android:windowBackground">@drawable/icon2021_background</item>
    </style>
    <style name="OverflowMenu.Icon2021" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
</resources>