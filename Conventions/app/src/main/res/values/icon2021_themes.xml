        <item name="hintTextColor">@color/icon2021_blue2</item>
        <item name="separatorColor">@color/icon2021_yellow1</item>

        <!-- Tabs -->
        <item name="selectedTabIndicatorColor">@color/icon2021_yellow2</item>
        <item name="unselectedTabTextColor">@color/icon2021_blue2</item>
        <item name="selectedTabTextColor">@color/icon2021_blue1</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/icon2021_notification</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarIconAccentColor">@color/icon2021_yellow1</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/icon2021_blue3</item>
        <item name="navigationPopupTitle">@drawable/icon2021_title_nav</item>
