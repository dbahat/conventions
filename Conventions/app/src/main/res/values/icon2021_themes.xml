        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Icon2021</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Icon2021</item>
        <!-- General -->
        <item name="android:colorPrimaryDark">@color/black</item> <!-- Toolbar color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/icon2021_yellow1</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorLink">@color/icon2021_yellow1</item>
        <item name="actionButtonColor">@color/icon2021_yellow2</item>
        <item name="swipeToRefreshColor">@color/white</item>
        <item name="swipeToRefreshBackgroundColor">@color/icon2021_yellow2</item>
        <item name="snackbarActionColor">@color/icon2021_yellow2</item>
        <item name="highlightedButtonBackground">@drawable/icon2021_highlighted_button</item>
        <item name="highlightedButtonTextColor">@color/black</item>
        <item name="borderlessButtonColor">@color/icon2021_yellow2</item>
        <item name="activitiesBackground">@drawable/icon2021_background</item>
