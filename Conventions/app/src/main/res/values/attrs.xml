<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CompoundTextView">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FrameLayoutWithMaxHeight">
        <attr name="maxHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CollapsibleFeedbackView">
        <attr name="textColor" format="integer|reference"/>
        <attr name="answerBackground" format="integer|reference"/>
        <attr name="progressBarColor" format="color|reference"/>
        <attr name="sendButtonBackground" format="integer|reference"/>
        <attr name="sendButtonTextColor" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="ApplicationTheme">
        <!-- Sub-themes -->

        <!-- Used for: notification time selection, hour selection in programme -->
        <attr name="numberPickerTheme" format="integer|reference"/>

        <!-- Events Lists -->

        <!-- Used for: feedback activity event lists, programme search event list, programme events list,
             hall events list, my events event groups list, separator between current and next event in map location,
             separator between section header and its first event in the programme and programme search,
             separator between last event in section and the next section header in programme and programme search.
             Height is defined in attribute eventListDividerHeight and the resource should use the same attribute for its height. -->
        <attr name="eventListDivider" format="color|reference"/>
        <!-- Height for event list divider. See eventListDivider for usage. -->
        <attr name="eventListDividerHeight" format="dimension|reference"/>
        <!-- Used for: my events conflicting event group.
             Height is defined in attribute conflictingEventListDividerHeight and the resource should use the same attribute for its height. -->
        <attr name="conflictingEventListDivider" format="color|reference"/>
        <!-- Height for conflicting events list divider. See conflictingEventListDivider for usage. -->
        <attr name="conflictingEventListDividerHeight" format="dimension|reference"/>

        <!-- Activities -->

        <!-- Content top margin for all activities (useful for bg that should have the top visible). -->
        <attr name="activitiesTopPadding" format="dimension"/>
        <!-- Default background for activities -->
        <attr name="activitiesBackground" format="color|reference"/>
        <!-- Background for text-based activities: about, settings, accessibility, arrival methods. -->
        <attr name="infoActivitiesBackground" format="color|reference"/>
        <!-- Background for text in text-based activities -->
        <attr name="infoActivitiesTextBackground" format="color|reference"/>
        <!-- Background color for FAB -->
        <attr name="actionButtonColor" format="color|reference"/>
        <!-- Icon for FAB (search) -->
        <attr name="actionButtonIcon" format="integer|reference"/>
        <!-- Text color for message when something cannot be displayed.
             Used in: arrival methods (map cannot be displayed), map search results, programme search,
             updates, hall, my events -->
        <attr name="hintTextColor" format="color|reference"/>
        <!-- Color for content separator. Height is 1dp.
             Used in: hall (below tabs), programme search (below search results number). -->
        <attr name="separatorColor" format="color|reference"/>
        <!-- Margin before event view. Used in all event views except in the map. -->
        <attr name="eventStartMargin" format="dimension"/>
        <!-- Margin after event view. Used in all event views except in the map. -->
        <attr name="eventEndMargin" format="dimension"/>
        <!-- Margin from screen to start of activity content.
             Not including scroll views, map in arrival methods, event view, updates separator before
             and after updates list. -->
        <attr name="contentStartMargin" format="dimension"/>
        <!-- Margin from activity content to screen See contentStartMargin for usage. -->
        <attr name="contentEndMargin" format="dimension"/>

        <!-- Notifications -->

        <!-- Notification icon. Used in all notifications created by code: new updates available, event about to start,
             send event feedback send convention feedback, push notification arrived when app is open. -->
        <attr name="notificationSmallIcon" format="integer"/>

        <!-- Toolbar -->

        <!-- Toolbar title text color -->
        <attr name="toolbarTitleColor" format="color|reference"/>
        <!-- Default toolbar background color -->
        <attr name="toolbarBackground" format="color|reference"/>
        <!-- Navigation icon (hamburger) -->
        <attr name="toolbarLogo" format="integer|reference"/>
        <!-- Color for highlighted toolbar icons. Used in: go to favorites in programme activity when
             favorite event is added/removed, feedback icon in programme activity when convention ended
             and user hasn't sent feedback -->
        <attr name="toolbarIconAccentColor" format="color|reference"/>
        <!-- Custom Tabs (used for authentication) -->
        <attr name="customTabsToolbarColor" format="color|reference"/>

        <!-- Snackbar -->

        <!-- Button color for snackbar action -->
        <attr name="snackbarActionColor" format="color|reference"/>

        <!-- Swipe to Refresh -->

        <!-- Icon color for swipe-to-refresh -->
        <attr name="swipeToRefreshColor" format="color|reference"/>
        <!-- Background color for swipe-to-refresh -->
        <attr name="swipeToRefreshBackgroundColor" format="color|reference"/>

        <!-- Tabs -->

        <!-- Background color for tabs -->
        <attr name="tabsBackground" format="color|reference"/>
        <!-- Color for selected tab indicator -->
        <attr name="selectedTabIndicatorColor" format="color|reference"/>
        <!-- Custom tab indicator for days tabs. If null, the default will be used. -->
        <attr name="selectedTabIndicator" format="integer|reference"/>
        <!-- Text color for tab which is not selected -->
        <attr name="unselectedTabTextColor" format="color|reference"/>
        <!-- Text color for selected tab -->
        <attr name="selectedTabTextColor" format="color|reference"/>

        <!-- Event View -->

        <!-- Layout resource for event view -->
        <attr name="eventViewLayout" format="integer|reference"/>
        <!-- Height for event view resource -->
        <attr name="eventViewHeight" format="dimension|reference"/>
        <!-- Radius for round event view card corners (both the main part of the view and the time box) -->
        <attr name="eventViewCornerRadius" format="dimension|reference"/>
        <!-- Background color for event card view. If transparent, shadows may be visible inside it. -->
        <attr name="eventViewCardBackground" format="color|reference"/>

        <!-- Should the event color received from backend be used for event name and details text -->
        <attr name="useEventTextColorFromEventType" format="boolean"/>

        <!-- Text color for event name (if useEventTextColorFromEventType is false or timetable color is transparent).
             Can be a color state list. Event/time state is set with state_event_... attributes. -->
        <attr name="eventTextColor" format="color|reference"/>

        <!-- Background for conflicting event label. Used when event is conflicting and the label exists in the layout. -->
        <attr name="conflictingEventBackground" format="integer|reference" />

        <!-- Text color for conflicting event label. See conflictingEventBackground for usage. -->
        <attr name="conflictingEventLabelTextColor" format="color|reference" />

        <!-- Background color for event view. Can be a color state list. Event state is set with state_event_... attributes. -->
        <attr name="eventBackgroundColor" format="color|reference"/>

        <!-- Should the event color received from backend be used for event time box background -->
        <attr name="useEventTimeColorFromEventType" format="boolean"/>
        <!-- Text color for event time.
             Used when timetable text color is transparent or useEventTimeColorFromEventType is false.
             Can be a color state list. Event state is set with state_event_... attributes. -->
        <attr name="eventTimeTextColor" format="color|reference"/>

        <!-- Background color for event time. Used when useEventTimeColorFromEventType is false or event timetable color is transparent.
             Can be a color state list. Event state is set with state_event_... attributes. -->
        <attr name="eventTimeBackground" format="color|reference"/>

        <!-- Background drawable for event time. Used when useEventTimeColorFromEventType is false or event timetable color is transparent
             and eventTimeBackground is transparent/null. Only supported for non-rounded event view.
             Can be a drawable state list. Event state is set with state_event_... attributes. -->
        <attr name="eventTimeBackgroundDrawable" format="color|reference"/>

        <!-- Text color for event details (if useEventTextColorFromEventType is false or timetable color is transparent) -->
        <attr name="eventDetailsColor" format="color|reference"/>

        <!-- Text color for search terms in event tile in event search -->
        <attr name="eventNameKeywordHighlightColor" format="color|reference"/>
        <!-- Text color for search terms in event details in event search -->
        <attr name="eventKeywordHighlightColor" format="color|reference"/>

        <!-- Favorite icon for event. Can be a state list drawable. Event state is set with state_event_... attributes. -->
        <attr name="eventFavoriteIcon" format="integer|reference"/>
        <!-- Favorite icon filter color for event. Can be a color list drawable. Event state is set with state_event_... attributes. -->
        <attr name="eventFavoriteIconColor" format="color|reference"/>

        <!-- Feedback icon for event. Can be a state list drawable. Event and feedback state is set with state_event_... attributes. -->
        <attr name="eventFeedbackIcon" format="integer|reference"/>
        <!-- Feedback icon filter color for event (used with MULTIPLY mode). Can be a color list drawable.
             Event and feedback state is set with state_event_... attributes.
             If transparent color is selected, event details color is used. -->
        <attr name="eventFeedbackIconColor" format="color|reference"/>

        <!-- About screen -->

        <!-- Top image in about screen -->
        <attr name="aboutLogo" format="integer"/>
        <!-- Side margins for aboutLogo -->
        <attr name="aboutLogoMargins" format="dimension"/>

        <!-- Home screen -->

        <!-- Background for home activity (all screens) -->
        <attr name="homeBackground" format="color|reference"/>
        <!-- Toolbar title image for home activity (all screens) -->
        <attr name="homeToolbarTitle" format="integer|reference"/>
        <!-- Home activity toolbar background (all screens) -->
        <attr name="homeToolbarBackground" format="integer|reference"/>
        <!-- Top image in home activity (all screens). Can be a state list drawable. Home state is set with state_home_... attributes. -->
        <attr name="homeLogo" format="integer|reference"/>
        <!-- Margins (all sides) for homeLogo -->
        <attr name="homeLogoMargin" format="dimension"/>
        <!-- Side margins for home frame (the changing part) -->
        <attr name="homeFrameMargins" format="dimension" />
        <!-- Top margin for home frame (the changing part). Default is homeFrameMargins. -->
        <attr name="homeFrameTopMargin" format="dimension" />
        <!-- Bottom margin for home frame (the changing part). Default is homeFrameMargins. -->
        <attr name="homeFrameBottomMargin" format="dimension" />
        <!-- Bottom image in home activity (all screens). Can be a state list drawable. Home state is set with state_home_... attributes. -->
        <attr name="homeBottomImage" format="integer|reference"/>

        <!-- Background for title of info boxes in home screen.
             Used in: after convention box title, before convention title with convention date,
             during convention with favorites (with single title) "my events" title,
             during convention with favorites current and upcoming event titles,
             during convention without favorites "events starting at..." title.
             Can be a state list drawable. Home state is set with state_home_... attributes. -->
        <attr name="homeTitleBackground" format="color|reference"/>
        <!-- Text color for title of info boxes in home screen. See homeTitleBackground for usage. -->
        <attr name="homeTitleText" format="color|reference"/>
        <!-- Margin between title and info box. Used in: before convention, after convention,
             during convention when no favorites, during convention with favorites (single or separate titles). -->
        <attr name="homeBoxTopMargin" format="dimension"/>
        <!-- Background for info box in home screen. See homeTitleBackground for usage. -->
        <attr name="homeContentBackground" format="color|reference"/>
        <!-- Text color for text in info box in home screen. See homeContentBackground for usage. -->
        <attr name="homeContentText" format="color|reference"/>
        <!-- Margin between current and upcoming event in home during convention when there are favorites.
             Used in both single and separate title layouts. -->
        <attr name="homeEventsMargin" format="dimension"/>

        <!-- During the convention when user has favorite events, should the current and upcoming event have separate titles. -->
        <attr name="homeShowCurrentUpcomingTitles" format="boolean"/>
        <!-- Text color for upcoming event time (both single and separate titles) and current event time (when no upcoming event).
             Can be a color state list drawable. Home state is set with state_home_... attributes. -->
        <attr name="homeEventTimeText" format="color|reference"/>
        <!-- Text color for upcoming event hall (both single and separate titles).
             Can be a color state list drawable. Home state is set with state_home_... attributes. -->
        <attr name="homeEventHallText" format="color|reference"/>

        <!-- Title size in home screen when there are no favorites. -->
        <attr name="homeEventsListTitleSize" format="dimension"/>
        <!-- Divider for events list when no favorites. Height is defined in attribute homeEventListDividerHeight. -->
        <attr name="homeEventsListDivider" format="color|reference"/>
        <!-- Height for events list divider when no favorites. -->
        <attr name="homeEventsListDividerHeight" format="dimension|reference"/>
        <!-- Background for single event in the events list -->
        <attr name="homeEventsListEventBackground" format="color|reference"/>

        <!-- Background for all buttons in home screen -->
        <attr name="homeButtonBackground" format="color|reference"/>
        <!-- Text color for all buttons in home screen -->
        <attr name="homeButtonText" format="color|reference"/>
        <!-- Margins before and after the go to programme/updates buttons in home screen, before convention starts (not between them) -->
        <attr name="homeButtonsSideMargin" format="dimension"/>
        <!-- Margin above the single button in home screen during convention (with and without favorites, single and separate titles) -->
        <attr name="homeSingleButtonTopMargin" format="dimension"/>
        <!-- Style for the single button in home screen during convention -->
        <attr name="homeSingleButtonStyle" format="integer|reference"/>
        <!-- Show buttons in home screen (before and during convention) -->
        <attr name="homeShowButtons" format="boolean"/>
        <!-- Background for "go to updates" button before convention. Default is homeButtonBackground. -->
        <attr name="homeGotoUpdatesButtonBackground" format="integer|reference"/>
        <!-- Text color for "go to updates" button before convention. Default is homeButtonText. -->
        <attr name="homeGotoUpdatesButtonText" format="color|reference"/>

        <!-- My Events Screen -->

        <!-- Background for next event start time -->
        <attr name="nextEventStartTimeBackground" format="color|reference"/>
        <!-- Text color for next event start time -->
        <attr name="nextEventStartTimeTextColor" format="color|reference"/>
        <!-- Bottom line color for next event start time -->
        <attr name="nextEventStartTimeBottomLineColor" format="color|reference"/>

        <!-- Foreground color for conflicting events group. Can be used as a border. -->
        <attr name="conflictingEventsListBorder" format="integer|reference"/>
        <!-- Background color for conflicting events group -->
        <attr name="conflictingEventsBackground" format="color|reference"/>
        <!-- Margins to the sides of a conflicting events group -->
        <attr name="conflictingEventsSideMargin" format="dimension|reference"/>
        <!-- Margins to the top and bottom of a conflicting events group -->
        <attr name="conflictingEventsTopBottomMargin" format="dimension|reference"/>
        <!-- Separator between conflicting events group and other groups. Displayed in addition to the
             regular separator between groups. -->
        <attr name="conflictingEventsGroupSeparator" format="integer|reference"/>
        <!-- Height of the separator between conflicting events group and other groups -->
        <attr name="conflictingEventsGroupSeparatorHeight" format="dimension|reference"/>
        <!-- Margin around conflicting events separator from other groups -->
        <attr name="conflictingEventsGroupSeparatorMargin" format="dimension|reference"/>

        <!-- Icon for FAB (add). Used in My Events and Second Hand Sell. Background is defined in actionButtonColor. -->
        <attr name="addActionButtonIcon" format="integer|reference"/>

        <!-- Text color for free time in my events. Can be a color state list. State is set with state_event_... attributes. -->
        <attr name="freeTimeTextColor" format="color|reference"/>

        <!-- Background for free time in my events. Not a state list. -->
        <attr name="freeTimeBackground" format="integer|reference"/>

        <!-- Navigation Drawer -->

        <!-- Background for the navigation drawer-->
        <attr name="navigationPopupBackground" format="color|reference"/>

        <!-- Top image in the navigation drawer -->
        <attr name="navigationPopupTitle" format="integer|reference"/>
        <!-- width for the top image. Can be match_parent. -->
        <attr name="navigationPopupTitleWidth" format="dimension|reference">
            <!-- This allows to use match_parent as a value for this attribute -->
            <enum name="match_parent" value="-1" />
        </attr>
        <!-- Side margins for the top image -->
        <attr name="navigationPopupTitleMargins" format="dimension"/>

        <!-- Bottom image in the navigation drawer -->
        <attr name="navigationPopupBottomImage" format="integer|reference"/>
        <!-- Side margins for the bottom image -->
        <attr name="navigationPopupBottomImageMargins" format="dimension"/>
        <!-- Top margin for the bottom image -->
        <attr name="navigationPopupBottomImageTopMargin" format="dimension"/>
        <!-- Visibility for the space above the bottom image.
             Visible = the image is at the very bottom, gone = the image is right below the items. -->
        <attr name="navigationPopupSpaceVisibility" format="integer|reference">
            <enum name="visible" value="0" />
            <enum name="gone" value="2" />
        </attr>

        <!-- Color for selected item image in the top row -->
        <attr name="navigationPopupTopSelectedColor" format="color|reference"/>
        <!-- Color for non-selected item image in the top row -->
        <attr name="navigationPopupTopNotSelectedColor" format="color|reference"/>

        <!-- Color for selected item text and image in the main part of the navigation drawer -->
        <attr name="navigationPopupSelectedColor" format="color|reference"/>
        <!-- Color for non-selected item text and image in the main part of the navigation drawer -->
        <attr name="navigationPopupNotSelectedColor" format="color|reference"/>
        <!-- Background color for selected item text and image in the main part of the navigation drawer -->
        <attr name="navigationPopupSelectedBackground" format="color|reference"/>
        <!-- Color for separator between items in the main part of the navigation drawer -->
        <attr name="navigationPopupSeparatorColor" format="color|reference"/>
        <!-- Padding above an item in the main part of the navigation drawer -->
        <attr name="navigationPopupItemPaddingTop" format="dimension" />
        <!-- Padding below an item in the main part of the navigation drawer -->
        <attr name="navigationPopupItemPaddingBottom" format="dimension" />
        <!-- Display icons for items in the main part of the navigation drawer -->
        <attr name="navigationItemsShouldDisplayIcon" format="boolean"/>

        <!-- Updates Screen -->

        <!-- Separator color between the toolbar and updates lis -->
        <attr name="updatesSeparatorColor" format="color|reference"/>
        <!-- Background for updates activity, to be used when it's not a color (otherwise use updatesBackgroundColor which causes less overdraw) -->
        <attr name="updatesBackgroundDrawable" format="color|reference"/>
        <!-- Background color for updates activity.
             Used in: space between updates list and screen end, background when there are no updates,
             background during update refresh animations. -->
        <attr name="updatesBackgroundColor" format="color|reference"/>

        <!-- Padding for update item top -->
        <attr name="updatePaddingTop" format="dimension"/>
        <!-- Padding for update item bottom -->
        <attr name="updatePaddingBottom" format="dimension"/>
        <!-- Elevation for update item -->
        <attr name="updateElevation" format="dimension"/>
        <!-- Background for update. Can be a drawable state list. State is set with state_update_... -->
        <attr name="updateBackground" format="color|reference"/>
        <!-- Text color for update date and time. Can be a color state list. State is set with state_update_... -->
        <attr name="updateTimeColor" format="color|reference"/>
        <!-- Background for update date and time line -->
        <attr name="updateTimeBackground" format="color|reference"/>
        <!-- Color for separator between updates and the line after the date and time -->
        <attr name="updateItemSeparator" format="color|reference"/>
        <!-- Separator above the "show more" button -->
        <attr name="updateItemBorder" format="color|reference"/>
        <!-- Text color for update text. Can be a color state list. State is set with state_update_... -->
        <attr name="updateTextColor" format="color|reference"/>
        <!-- Should there be a "new" indicator for new updates -->
        <attr name="showNewUpdateIndicator" format="boolean"/>
        <!-- Text color for new update indicator. Can be a color state list. State is set with state_update_... -->
        <attr name="newUpdateIndicatorTextColor" format="color|reference"/>
        <!-- Background for new update indicator. Can be a color state list. State is set with state_update_... -->
        <attr name="newUpdateIndicatorBackground" format="integer|reference"/>

        <!-- Map Screen -->

        <!-- Color for toolbar in map activity -->
        <attr name="mapToolbarColor" format="color|reference"/>
        <!-- Background for map activity -->
        <attr name="mapBackground" format="color|reference"/>
        <!-- Background for floor up/down lines -->
        <attr name="floorChangeBackground" format="color|reference"/>
        <!-- Text color for floor up/down lines -->
        <attr name="floorUpDownTextColor" format="color|reference"/>
        <!-- Color for floor up/down lines border line -->
        <attr name="floorUpDownSeparator" format="color|reference"/>
        <!-- Elevation for floor up/down lines -->
        <attr name="floorUpDownElevation" format="dimension|reference"/>
        <!-- Icon for map floor up -->
        <attr name="iconFloorUp" format="integer|reference"/>
        <!-- Icon for map floor down -->
        <attr name="iconFloorDown" format="integer|reference"/>
        <!-- Color for separator line above location details -->
        <attr name="locationDetailsTopLineColor" format="color|reference"/>
        <!-- Background for location details -->
        <attr name="locationDetailsBackground" format="color|reference"/>
        <!-- Elevation for location details -->
        <attr name="locationDetailsElevation" format="dimension|reference"/>
        <!-- Text color for location name -->
        <attr name="locationDetailsTitleColor" format="color|reference"/>

        <!-- Border color above map search -->
        <attr name="mapSearchTopBorder" format="color|reference"/>
        <!-- Border color to the left of map search -->
        <attr name="mapSearchBorder" format="color|reference"/>
        <!-- Background for map search tabs -->
        <attr name="mapSearchTabsBackground" format="color|reference"/>
        <!-- Background for map search filters -->
        <attr name="mapSearchFiltersBackground" format="color|reference"/>
        <!-- Color for separator between search filters and search results -->
        <attr name="mapSearchSeparator" format="color|reference"/>
        <!-- Background color for map search results section -->
        <attr name="mapSearchResultsBackground" format="color|reference"/>
        <!-- Divider for map search results. Height is defined in mapSearchResultsDividerHeight. -->
        <attr name="mapSearchResultsDivider" format="color|reference"/>
        <!-- Height for map search results divider -->
        <attr name="mapSearchResultsDividerHeight" format="dimension|reference"/>
        <!-- Text color for all text in map search. Used in: search filters, search keyword, show only halls checkbox text,
             location result name and floor, stand result name and floor. Also used for stands popup text for unselected stand. -->
        <attr name="mapSearchText" format="color|reference"/>
        <!-- Color for tabs in map search, including selected, not selected, and tab indicator. -->
        <attr name="mapSearchTabsColor" format="color|reference"/>
        <!-- Custom tab indicator for map search. If null, the default will be used. -->
        <attr name="mapSearchTabsIndicator" format="integer|reference"/>
        <!-- Image color for map search results icons (for both locations and stands) -->
        <attr name="mapSearchImageColor" format="color|reference"/>
        <!-- Text color for map search hint for keywords -->
        <attr name="mapSearchHint" format="color|reference"/>
        <!-- Color for map search "show only halls" checkbox -->
        <attr name="mapSearchCheckboxTint" format="color|reference"/>
        <!-- Custom background for the map search TextEdit.
             If null, background tint of the default text edit background is set to mapSearchTex. -->
        <attr name="mapSearchBarBackground" format="integer|reference"/>
        <!-- Additional margins for map search TextEdit -->
        <attr name="mapSearchBarHorizontalMargins" format="dimension|reference"/>
        <!-- Elevation for map search pane -->
        <attr name="mapSearchPaneElevation" format="dimension|reference"/>

        <!-- Stands popup stand icon color -->
        <attr name="standIconColor" format="color|reference"/>
        <!-- Stands popup - color for stand type title and selected stand name and location -->
        <attr name="standsTypeTitleColor" format="color|reference"/>
        <!-- Color for stands map location highlight on the stands map image (for selected location) -->
        <attr name="standsMapHighlight" format="color|reference"/>

        <!-- Event Screen -->

        <!-- Toolbar color in event activity -->
        <attr name="eventToolbarColor" format="color|reference"/>
        <!-- Favorite icon color in toolbar for favorite event -->
        <attr name="eventActivityFavoriteColor" format="color|reference"/>
        <!-- Background for event details. If there are mapped images, possibly used for fading effect.
             This means it must be a color if there are any mapped images. -->
        <attr name="eventDetailsDefaultBackground" format="color|reference"/>

        <!-- Background for event title box -->
        <attr name="eventTitleBackground" format="integer|reference"/>
        <!-- Padding for event title box -->
        <attr name="eventTitlePadding" format="dimension"/>
        <!-- Text color for text in event title box (event name, type and location type) -->
        <attr name="eventTitleTextColor" format="color|reference"/>
        <!-- Background for event name -->
        <attr name="eventNameBackground" format="integer|reference"/>
        <!-- Text color for event subtitle -->
        <attr name="eventSubTitleTextColor" format="color|reference"/>
        <!-- Background for event subtitle -->
        <attr name="eventSubTitleBackground" format="integer|reference"/>
        <!-- Text color for lecturer. Default is eventTitleTextColor. -->
        <attr name="eventLecturerTextColor" format="color|reference"/>
        <!-- Background for lecturer -->
        <attr name="eventLecturerBackground" format="integer|reference"/>
        <!-- Text color for event type and location type. Default is eventTitleTextColor. -->
        <attr name="eventTypeTextColor" format="color|reference"/>
        <!-- Background for event type and location type -->
        <attr name="eventTypeBackground" format="integer|reference"/>

        <!-- Background for event details box -->
        <attr name="eventDetailsBoxColor" format="color|reference"/>
        <!-- Text color for text in event details box (lecturer, hall, time, additional info; in sf-f: Price, tickets availability, tags) -->
        <attr name="eventDetailsTextColor" format="color|reference"/>
        <!-- Text color for highlighted text in event details box (used for tickets are unavailable text) -->
        <attr name="eventDetailsHighlightedTextColor" format="color|reference"/>

        <!-- Background for event description box -->
        <attr name="eventDescriptionBoxColor" format="color|reference"/>
        <!-- Text color for event description -->
        <attr name="eventDescriptionTextColor" format="color|reference"/>

        <!-- Background color for feedback box in event activity.
             Can be a state list. Feedback state is set with state_event_feedback_... attributes (except state_event_feedback_filled). -->
        <attr name="eventFeedbackBoxColor" format="color|reference"/>
        <!-- Text color for event feedback. Used in: title (collapsed and open), feedback sent message,
             questions, answers, additional feedback link, separator above the send button.
             Can be a color state list. Feedback state is set with state_feedback_... and state_event_feedback_... (except state_event_feedback_filled) attributes. -->
        <attr name="eventFeedbackTextColor" format="color|reference"/>
        <!-- Background for event feedback answer. Used in multiple answers for selected and unselected answers.
             Can be a drawable state list. Feedback state is set with state_feedback_... attributes. -->
        <attr name="eventFeedbackAnswerBackground" format="color|reference"/>
        <!-- Color for borderless button text and feedback icon (when it's not a smiley) in feedback layout
             (open/close feedback). Used in event activity. Can be a drawable state list. Feedback state is set with state_event_feedback_... (except state_event_feedback_filled) attributes. -->
        <attr name="feedbackButtonColor" format="color|reference"/>
        <!-- Button background for event feedback "send" button -->
        <attr name="eventFeedbackButtonBackground" format="integer|reference"/>
        <!-- Button text color for event feedback "send" button -->
        <attr name="eventFeedbackButtonTextColor" format="integer|reference"/>
        <!-- Color for the sending progress bar in event feedback view -->
        <attr name="eventFeedbackProgressBarColor" format="color|reference"/>


        <!-- Background color for event vote/view box in event activity -->
        <attr name="eventVoteBoxColor" format="color|reference"/>
        <!-- Text color for event vote/view box in event activity. Used for: view description, vote description, vote note. -->
        <attr name="eventVoteTextColor" format="color|reference"/>
        <!-- Button text color for event vote/view button -->
        <attr name="eventVoteButtonTextColor" format="color|reference"/>
        <!-- Button background for event vote/view button -->
        <attr name="eventVoteButtonBackground" format="integer|reference"/>

        <!-- Event Survey Dialog -->

        <!-- Text color for event vote survey. See eventFeedbackTextColor for usage. -->
        <attr name="eventSurveyTextColor" format="color|reference"/>

        <!-- Buttons -->

        <!-- Button style. By default, uses buttonColorPressed for the ripple, buttonColorDisabled for
             disabled color, and buttonColor for regular color.
             The style is used in: arrival methods (install google services), event activity (view, vote),
             feedback activity (send all feedbacks), feedback layout in feedback screen and event vote
             survey (send feedback), map (open stands, goto floor). -->
        <attr name="highlightedButtonBackground" format="integer|reference"/>
