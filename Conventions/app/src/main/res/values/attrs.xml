<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CompoundTextView">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ApplicationTheme">
        <!-- Notifications -->
        <attr name="notificationSmallIcon" format="integer"/>
        <attr name="notificationLargeIcon" format="integer"/>
        <!-- Toolbar -->
        <attr name="toolbarBackground" format="color|reference"/>
        <attr name="toolbarLogo" format="integer|reference"/>
        <attr name="toolbarLogoType" format="enum">
            <enum name="bitmap" value="0"/>
            <enum name="svg" value="1"/>
        </attr>
        <attr name="toolbarIconAccentColor" format="color|reference"/>
        <!-- Snackbar -->
        <attr name="snackbarActionColor" format="color|reference"/>
        <!-- Home Screen -->
        <attr name="homeScreenlayout" format="integer"/>
        <attr name="aboutTopView" format="integer"/>
        <attr name="aboutBottomView" format="integer"/>
        <attr name="aboutLeftView" format="integer"/>
        <attr name="aboutRightView" format="integer"/>
        <!-- About screen -->
        <attr name="amaiLogo" format="integer"/>
        <!-- Event Time -->
        <attr name="eventTypeEndedColor" format="color|reference"/>
        <attr name="eventTypeCurrentColor" format="color|reference"/>
        <attr name="eventTypeNotStartedColor" format="color|reference"/>
        <attr name="eventTimeDefaultTextColor" format="color|reference"/>
        <!-- MyEvents Screen -->
        <attr name="nextEventStartTimeBackground" format="color|reference"/>
        <attr name="nextEventStartTimeTextColor" format="color|reference"/>
        <attr name="nextEventStartTimeBottomLineColor" format="color|reference"/>
        <attr name="conflictingEventsBackground" format="color|reference"/>
        <!-- Navigation Popup -->
        <attr name="navigationPopupSelectedColor" format="color|reference"/>
        <attr name="navigationPopupNotSelectedColor" format="color|reference"/>
        <!-- Programme Screen -->
        <attr name="eventTimeHeaderColor" format="color|reference"/>
        <attr name="eventTimeHeaderBackground" format="color|reference"/>
        <!-- Updates Screen -->
        <attr name="updateTimeColor" format="color|reference"/>
        <attr name="updatesBackground" format="color|reference"/>
        <!-- Map Screen -->
        <attr name="locationDetailsBackground" format="color|reference"/>
        <attr name="locationDetailsTopLineColor" format="color|reference"/>
        <attr name="floorBackground" format="color|reference"/>
        <!-- Event Screen -->
        <attr name="eventDetailsBoxColor" format="color|reference"/>
        <attr name="eventFeedbackBoxColor" format="color|reference"/>
        <attr name="eventFeedbackHighlightedButtonColor" format="color|reference"/>
        <attr name="eventFeedbackHighlightedButtonPressedColor" format="color|reference"/>
        <attr name="eventDetailsDefaultBackgroundColor" format="color|reference"/>
        <attr name="feedbackAnswerButtonColor" format="color|reference"/>
        <attr name="feedbackAnswerButtonSelectedColor" format="color|reference"/>
    </declare-styleable>
</resources>