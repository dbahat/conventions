        <!-- Share toolbar icon. Used in my events activity. -->
        <attr name="iconShare" format="integer|reference"/>
        <!-- Feedback toolbar icon. Used in programme activity. -->
        <attr name="iconFeedback" format="integer|reference"/>
        <!-- Map toolbar icon. Used in event activity. -->
