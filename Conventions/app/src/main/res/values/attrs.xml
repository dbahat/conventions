        <attr name="eventTimeHeaderMarginHorizontal" format="dimension" />
        <!-- Top and bottom padding for event time/day header in programme and programme search -->
        <attr name="eventTimeHeaderPaddingVertical" format="dimension"/>
        <!-- Margin between events list in a certain hour and the next hour/day header in prgramme and programme search activities. -->
        <attr name="marginBetweenEventsListAndNextHeader" format="dimension" />

