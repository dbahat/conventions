<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="AppBaseTheme.Olamot2023" parent="AppBaseTheme.Light">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Olamot2023</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Olamot2023</item>
        <!-- General -->
<!--        <item name="activitiesTopPadding">7dp</item>-->
        <item name="android:colorPrimaryDark">@color/black</item> <!-- Toolbar color -->
        <!-- Used in: default selected checkbox/switch color, settings titles,
             cursor color in all edit texts. Also used as the default action button color and map search checkbox color. -->
        <item name="colorAccent">@color/olamot2023_red2</item>
        <!-- This color should be readable over the activities background.
             Used as the text color in: accessibility, arrival methods.
             Also used as default for many texts and as the default "large text" color (e.g. in settings). -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used in: default unselected checkbox color and default "medium/small" texts (e.g. in settings). -->
        <item name="android:textColorSecondary">@color/olamot2023_red2</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorHint">@color/olamot2023_brown2</item>
        <item name="android:textColorLink">@color/olamot2023_red1</item>
        <item name="actionButtonColor">@color/olamot2023_green</item>
        <item name="actionButtonIcon">@drawable/ic_action_search_black</item>
        <item name="hintTextColor">@color/olamot2023_brown2</item>
        <item name="swipeToRefreshColor">@color/black</item>
        <item name="swipeToRefreshBackgroundColor">@color/olamot2023_green</item>
        <item name="snackbarActionColor">@color/olamot2023_green</item>
        <item name="highlightedButtonBackground">@drawable/highlighted_button</item>
        <item name="borderlessButtonColor">@color/olamot2023_red1</item>
        <item name="activitiesBackground">@drawable/olamot2023_background</item>
        <item name="contentStartMargin">20dp</item>
        <item name="contentEndMargin">20dp</item>
        <item name="eventListDivider">@drawable/olamot2023_event_list_divider</item>
        <item name="conflictingEventListDivider">@android:color/transparent</item>
        <item name="separatorColor">@color/olamot2023_red1</item>
        <!-- These are used for buttons. They should be usable when the background is:
             Event screen vote
             Feedback screen
             Map bottom info panel
             Arrival methods screen
         -->
        <item name="buttonColor">@color/olamot2023_brown1</item>
        <item name="buttonColorPressed">@color/olamot2023_brown2</item>
        <item name="buttonColorDisabled">@color/dark_gray</item>
        <item name="buttonTextColor">@color/black</item>

        <!-- Tabs -->
        <item name="tabsBackground">@null</item>
        <item name="unselectedTabTextColor">@color/black</item>
        <item name="selectedTabTextColor">@color/black</item>
        <item name="selectedTabIndicatorColor">@color/olamot2023_red1</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/olamot2023_notification_icon</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarIconAccentColor">@color/olamot2023_red1</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/olamot2023_pink1</item>
        <item name="navigationPopupTitle">@drawable/olamot2023_navigation_logo</item>
        <item name="navigationPopupTitleMargins">10dp</item>
        <item name="navigationPopupBottomImage">@null</item>
        <item name="navigationPopupNotSelectedColor">@color/black</item>
        <item name="navigationPopupSelectedColor">@color/olamot2023_brown1</item>
        <item name="navigationPopupSeparatorColor">@color/black</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/olamot2023_home_logo</item>
        <item name="aboutLogoMargins">20dp</item>
        <!-- Home Screen -->
        <item name="homeBoxTopMargin">0dp</item>
        <item name="homeSingleButtonTopMargin">10dp</item>
        <item name="homeButtonsSideMargin">15dp</item>
        <item name="homeBackground">@drawable/olamot2023_background</item>
        <item name="homeLogo">@drawable/olamot2023_home_logo</item>
        <item name="homeLogoMargin">15dp</item>
        <item name="homeFrameTopMargin">5dp</item>
        <item name="homeFrameBottomMargin">5dp</item>
        <item name="homeToolbarTitle">@null</item>
        <item name="homeTitleBackground">@color/black</item>
        <item name="homeTitleText">@drawable/olamot2023_home_title_text_color</item>
        <item name="homeEventsMargin">10dp</item>
        <item name="homeShowCurrentUpcomingTitles">true</item>
        <item name="homeContentBackground">@drawable/olamot2023_home_content_background</item>
        <item name="homeContentText">@color/black</item>
        <item name="homeEventTimeText">@color/black</item>
        <item name="homeEventHallText">@color/black</item>
        <item name="homeButtonBackground">@drawable/highlighted_button_not_rounded</item>
        <item name="homeButtonText">@color/black</item>
        <item name="homeBottomImage">@drawable/olamot2023_home_bottom</item>
        <item name="homeEventsListDivider">@drawable/olamot2023_home_event_list_divider</item>
        <!-- Event View -->
        <item name="eventTextColor">@drawable/olamot2023_event_view_text_color</item>
        <item name="eventTimeTextColor">@color/olamot2023_pink1</item>
        <item name="eventTimeBackgroundDrawable">@drawable/olamot2023_red2_box</item>
        <item name="eventDetailsColor">?eventTextColor</item>
        <item name="eventFeedbackIconColor">@drawable/olamot2023_feedback_icon_color</item>
        <item name="eventFavoriteIconColor">@drawable/olamot2023_favorite_icon_color</item>
        <item name="eventStartMargin">20dp</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderTextColor">@color/white</item>
        <item name="eventTimeHeaderBackground">@drawable/olamot2023_red1_box</item>
        <item name="searchCategoriesColor">@color/olamot2023_red1</item>
        <item name="searchCategoriesTextColor">@color/black</item>
        <item name="eventTimeHeaderWidth">match_parent</item>
        <item name="eventTimeHeaderMarginTop">10dp</item>
        <item name="eventTimeHeaderMarginBottom">@null</item>
        <item name="eventTimeHeaderMarginHorizontal">20dp</item>
        <item name="eventTimeHeaderPaddingVertical">4dp</item>
        <item name="marginBetweenEventsListAndNextHeader">0dp</item>
        <!-- Programme Search Screen -->
        <item name="searchTitleTextColor">@color/black</item>
        <item name="eventNameKeywordHighlightColor">@color/white</item>
        <item name="eventKeywordHighlightColor">@color/white</item>
        <item name="searchDrawerAccentColor">@color/olamot2023_red1</item>
        <item name="searchDrawerBackground">@color/olamot2023_pink1</item>
        <item name="searchDrawerTextColor">@color/black</item>
        <item name="searchDrawerSeparatorColor">@color/black</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@android:color/transparent</item>
        <item name="nextEventStartTimeTextColor">@color/olamot2023_red1</item>
        <item name="nextEventStartTimeBottomLineColor">@color/olamot2023_red1</item>
        <item name="conflictingEventsListBorder">@null</item>
        <item name="conflictingEventsBackground">@color/very_transparent_white</item>
        <item name="addActionButtonIcon">@drawable/baseline_add_black_36</item>
        <!-- Feedback Screen -->
        <item name="feedbackProgressBarColor">@color/olamot2023_brown1</item>
        <item name="conventionFeedbackTextColor">@drawable/olamot2023_feedback_text_color</item>
        <item name="feedbackEventDateHeaderTextColor">@color/olamot2023_red2</item>
        <!-- Updates Screen -->
        <item name="updateItemBorder">@color/olamot2023_red1</item>
        <item name="updateTextColor">@drawable/olamot2023_update_text_color</item>
        <item name="updateItemSeparator">@null</item>
        <item name="updateTimeBackground">@color/black</item>
        <item name="updateTimeColor">@color/olamot2023_yellow</item>
        <item name="updatesSeparatorColor">@android:color/transparent</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">?toolbarBackground</item>
        <item name="eventActivityFavoriteColor">@color/olamot2023_red1</item>
        <item name="eventDetailsDefaultBackground">?activitiesBackground</item>
        <item name="eventTitleBackground">@color/black</item>
        <item name="eventTitleTextColor">@color/olamot2023_yellow</item>
        <item name="eventDetailsBoxColor">@drawable/olamot2023_yellow_box</item>
        <item name="eventDetailsTextColor">@color/black</item>
        <item name="eventDetailsHighlightedTextColor">@color/olamot2023_red1</item>
        <item name="eventDescriptionTextColor">@color/black</item>
        <item name="eventDescriptionBoxColor">@drawable/olamot2023_yellow_box</item>
        <item name="eventFeedbackBoxColor">@drawable/olamot2023_red1_box</item>
        <item name="eventFeedbackTextColor">@drawable/olamot2023_event_feedback_text_color</item>
        <item name="eventFeedbackProgressBarColor">@color/olamot2023_brown2</item>
        <item name="eventFeedbackButtonBackground">@drawable/olamot2023_event_feedback_button</item>
        <item name="eventFeedbackButtonTextColor">@color/white</item>
        <item name="feedbackButtonColor">@color/olamot2023_yellow</item>
        <item name="eventVoteBoxColor">@drawable/olamot2023_red2_box</item>
        <item name="eventVoteTextColor">@color/white</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/olamot2023_pink2</item>
        <item name="locationDetailsTitleColor">@color/black</item>
        <item name="mapBackground">@drawable/olamot2023_background</item>
        <item name="floorChangeBackground">@color/olamot2023_pink2</item>
        <item name="standIconColor">@color/olamot2023_red1</item>
        <item name="standsTypeTitleColor">@color/olamot2023_red1</item>
        <item name="mapSearchText">@color/black</item>
        <item name="mapSearchFiltersBackground">@color/olamot2023_pink2</item>
        <item name="mapSearchResultsBackground">@color/olamot2023_transparent_pink2</item>
        <item name="mapSearchHint">@color/olamot2023_brown2</item>
        <item name="mapSearchSeparator">@color/black</item>
        <item name="mapSearchResultsDivider">@color/black</item>
        <item name="mapSearchBorder">@color/black</item>
        <item name="mapSearchCheckboxTint">@color/olamot2023_red1</item>
        <!-- Second Hand Screen -->
        <item name="secondHandFormColor">@drawable/olamot2023_second_hand_form_text_color</item>
        <item name="secondHandItemStatusColor">@drawable/olamot2023_second_hand_item_status_text_color</item>
        <item name="secondHandItemsDivider">@drawable/olamot2023_second_hand_item_list_divider</item>
        <item name="secondHandFilterColor">@color/black</item>
        <item name="secondHandSelectedFilterColor">@color/olamot2023_red1</item>
        <!-- Discounts activity -->
        <item name="discountsActivityLayout">@layout/activity_discounts</item>
    </style>

    <style name="AppBaseTheme.Olamot2023.Event" parent="AppBaseTheme.Olamot2023">
        <item name="android:textColorLink">@color/olamot2023_red1</item>
    </style>

    <style name="AppBaseTheme.Olamot2023.Settings" parent="AppBaseTheme.Olamot2023">
        <item name="android:textColor">@color/olamot2023_red2</item>
    </style>


    <style name="AppDialogTheme.Olamot2023" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/olamot2023_red1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/olamot2023_red1</item>
    </style>

    <style name="AppAlertDialogTheme.Olamot2023" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/olamot2023_red1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="borderlessButtonColor">@color/olamot2023_red1</item>
    </style>

    <style name="AppBaseTheme.Olamot2023.Splash">
        <item name="android:windowBackground">@drawable/olamot2023_background</item>
    </style>

     <style name="TransparentTheme.Olamot2023" parent="TransparentTheme">
          <!-- Custom Tabs -->
          <item name="customTabsToolbarColor">@color/olamot2023_pink1</item>
     </style>
</resources>