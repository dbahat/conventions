        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <!-- Used for configure notifications popup title and separator -->
        <item name="colorAccent">@color/animatsuri2024_purple800</item>
        <item name="borderlessButtonColor">@color/animatsuri2024_purple700</item>
        <item name="android:textColorPrimary">@color/animatsuri2024_gray1000</item>
