<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Cami2016.Toolbar"/>

    <style name="AppBaseTheme.Cami2016">
        <item name="android:dialogTheme">@style/AppDialogTheme.Cami2016</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Cami2016</item>
        <item name="colorAccent">@color/red_dark</item>
        <item name="android:colorBackground">@color/light_orange_bright</item>

        <item name="notificationSmallIcon">@drawable/cami2016_notification_small</item>
        <item name="notificationLargeIcon">@drawable/cami2016_notification_large</item>

        <item name="toolbarBackground">@color/purple_bright</item>
        <item name="toolbarLogo">@drawable/cami2016_logo_toolbar</item>
        <item name="toolbarLogoType">bitmap</item>
        <item name="toolbarIconAccentColor">@color/gold</item>
        <item name="navigationPopupSelectedColor">@color/red_dark</item>

        <item name="snackbarActionColor">@color/red_bright</item>

        <item name="homeScreenLayout">@layout/activity_home_cami2016</item>
        <!-- Note: this isn't really the top point of the about screen since we didn't give a bottom
             view so it will be wrap_content -->
        <item name="aboutTopView">@id/home_buttons_bottom</item>
        <item name="aboutLeftView">@id/home_buttons_bottom</item>
        <item name="aboutRightView">@id/home_buttons_bottom</item>

        <item name="aboutLogo">@drawable/amai_logo_black</item>

        <item name="eventTimeDefaultTextColor">@color/black</item>
        <item name="eventTimeDefaultBackgroundColor">@color/light_pink</item>

        <item name="floorBackground">@color/very_light_yellow</item>
        <item name="standIconColor">@color/purple_bright</item>
        <item name="standsTypeTitleColor">@color/red_dark</item>

        <item name="focusedUpdateBackground">@color/yellow_medium</item>

        <item name="nextEventStartTimeBackground">@color/gold_bright</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>

        <!-- Note: if you change the theme, these values should be copied manually to files
         drawable\highlighted_button.xml and drawable/circular_progress_bar.xml because
         prior to L it was not supported to reference theme attributes from a drawable xml -->
        <item name="buttonColor">@color/red_dark</item>
        <item name="buttonColorPressed">@color/red</item>
        <item name="feedbackAnswerButtonColor">@color/red_dark</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/red</item>
    </style>

    <style name="AppDialogTheme.Cami2016" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/red_dark</item>
    </style>

    <style name="AppAlertDialogTheme.Cami2016" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red_dark</item>
    </style>

    <style name="AppBaseTheme.Cami2016.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>