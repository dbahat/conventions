<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme.Cami2017.Toolbar" parent="AppBaseTheme.Cami2017"/>

    <style name="AppBaseTheme.Cami2017">
        <!-- Sub-themes -->
        <item name="android:dialogTheme">@style/AppDialogTheme.Cami2017</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme.Cami2017</item>
        <!-- not using android:actionOverflowButtonStyle since it doesn't seem to work in Jellybean -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenu.Cami2017</item>
        <!-- General -->
        <item name="colorAccent">@color/cami2017_red</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColorLink">@color/cami2017_red_dark</item>
        <item name="actionButtonColor">@color/cami2017_red</item>
        <item name="hintTextColor">@color/cami2017_very_dark_blue_bright</item>
        <item name="swipeToRefreshColor">@color/cami2017_red</item>
        <item name="snackbarActionColor">@color/cami2017_pink</item>
        <item name="highlightedButtonBackground">@drawable/cami2017_highlighted_button</item>
        <item name="borderlessButtonColor">@color/cami2017_red_dark</item>
        <item name="feedbackButtonColor">@color/white</item>
        <item name="feedbackAnswerButtonColor">@color/cami2017_red_dark</item>
        <item name="feedbackAnswerButtonSelectedColor">@color/cami2017_red</item>
        <item name="shadowForeground">@null</item>
        <item name="activitiesBackground">@drawable/cami2017_page_background</item>
        <item name="eventListDivider">@drawable/cami2017_event_list_divider</item>
        <!-- Note: if you change the theme, these values should be copied manually to file
         ?highlightedButtonBackground (non-v21) because prior to L it was not supported to reference
         theme attributes from a drawable xml -->
        <item name="buttonColor">@color/cami2017_very_dark_blue</item>
        <item name="buttonColorPressed">@color/cami2017_very_dark_blue_bright</item>

        <!-- Notifications -->
        <item name="notificationSmallIcon">@drawable/cami2017_notification_small</item>
        <!-- Toolbar -->
        <item name="toolbarBackground">@null</item>
        <item name="toolbarLogo">@drawable/ic_menu_black_24dp</item>
        <item name="toolbarIconAccentColor">@color/cami2017_red</item>
        <!-- Navigation Popup -->
        <item name="navigationPopupBackground">@color/cami2017_darkest_blue</item>
        <item name="navigationPopupTitle">@drawable/cami2017_title_white</item>
        <item name="navigationPopupBottomImage">@drawable/cami2017_navigation_drawer_image</item>
        <item name="navigationPopupNotSelectedColor">@color/white</item>
        <item name="navigationPopupSelectedColor">@color/cami2017_pink</item>
        <item name="navigationPopupSeparatorColor">@android:color/transparent</item>
        <!-- About Screen -->
        <item name="aboutLogo">@drawable/amai_logo_black</item>
        <!-- Home Screen -->
        <item name="homeLogo">@null</item>
        <item name="homeBottomImage">@null</item>
        <item name="homeBackground">@drawable/cami2017_home_background</item>
        <item name="homeToolbarTitle">@drawable/cami2017_title_white</item>
        <item name="homeTitleBackground">@color/cami2017_dark_blue_dark</item>
        <item name="homeTitleText">@color/cami2017_purple_bright</item>
        <item name="homeMessageBackground">@color/cami2017_dark_blue</item>
        <item name="homeMessageText">@color/cami2017_purple_bright</item>
        <item name="homeCurrentEventBackground">?homeMessageBackground</item>
        <item name="homeUpcomingEventBackground">@color/cami2017_red_dark</item>
        <item name="homeButtonBackground">@drawable/cami2017_home_activity_button</item>
        <item name="homeButtonText">@color/cami2017_purple_bright</item>
        <!-- Event View -->
        <item name="eventTypeEndedColor">@color/cami2017_purple_dark</item>
        <item name="eventTypeCurrentColor">@color/cami2017_red_dark</item>
        <item name="eventTypeNotStartedColor">@color/cami2017_blue_dark</item>
        <item name="eventNameKeywordHighlightColor">@color/cami2017_red</item>
        <item name="eventKeywordHighlightColor">@color/cami2017_red</item>
        <item name="eventTimeDefaultTextColor">@color/white</item>
        <item name="eventTimeDefaultBackgroundColor">@color/cami2017_very_dark_blue_bright</item>
        <item name="eventDetailsColor">@color/cami2017_blue_dark</item>
        <item name="eventSendFeedbackColor">@color/cami2017_red</item>
        <item name="eventFavoriteIcon">@drawable/ic_star_black_24dp</item>
        <item name="eventNonFavoriteColor">@color/cami2017_blue_dark</item>
        <item name="eventFavoriteColor">@color/cami2017_red</item>
        <!-- Map Screen -->
        <item name="locationDetailsBackground">@color/transparent_black</item>
        <item name="locationDetailsTitleColor">@color/cami2017_dark_blue</item>
        <item name="mapBackground">@drawable/cami2017_map_background</item>
        <item name="standIconColor">@color/cami2017_red_dark</item>
        <item name="standsTypeTitleColor">@color/cami2017_red_dark</item>
        <!-- Updates Screen -->
        <item name="focusedUpdateBackground">@color/transparent_yellow</item>
        <item name="newUpdateBackground">@color/transparent_black</item>
        <item name="updateTimeColor">@color/cami2017_gray</item>
        <item name="updateItemBorder">@color/cami2017_dark_purple_bright</item>
        <!-- My Events Screen -->
        <item name="nextEventStartTimeBackground">@color/transparent_black</item>
        <item name="nextEventStartTimeTextColor">@color/black</item>
        <item name="conflictingEventsBackground">@color/transparent_black</item>
        <!-- Event Screen -->
        <item name="eventToolbarColor">@color/cami2017_gray</item>
        <item name="eventDetailsDefaultBackgroundColor">@color/cami2017_gray</item>
        <item name="eventDetailsBoxColor">@color/cami2017_transparent_very_dark_blue</item>
        <item name="eventFeedbackBoxColor">@color/cami2017_transparent_red</item>
        <item name="eventVoteBoxColor">@color/cami2017_transparent_purple_bright</item>
        <item name="eventDescriptionTextColor">@color/cami2017_purple_bright</item>
        <item name="eventTitleBackground">@drawable/cami2017_event_title_background</item>
        <item name="eventTitleTextColor">@color/cami2017_purple_bright</item>
        <!-- Feedback Screen -->
        <item name="progressBarDrawable">@drawable/cami2017_rotating_circular_progress_bar</item>
        <!-- Programme Screen -->
        <item name="eventTimeHeaderBackground">@null</item>
    </style>

    <style name="AppBaseTheme.Cami2017.Toolbar.Event" parent="AppBaseTheme.Cami2017.Toolbar">
        <item name="android:textColorLink">@color/cami2017_red</item>
    </style>

    <style name="AppDialogTheme.Cami2017" parent="Theme.AppCompat.Light.Dialog">
        <!-- This is the default starting API23. In any case the title is always left-justified so it's best to not use it. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/cami2017_red</item>
        <item name="borderlessButtonColor">@color/cami2017_red</item>
    </style>

    <style name="AppAlertDialogTheme.Cami2017" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cami2017_red</item>
        <item name="borderlessButtonColor">@color/cami2017_red</item>
    </style>

    <style name="AppBaseTheme.Cami2017.Toolbar.Splash">
        <item name="android:windowBackground">@drawable/cami2017_page_background</item>
    </style>

    <style name="OverflowMenu.Cami2017" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

</resources>