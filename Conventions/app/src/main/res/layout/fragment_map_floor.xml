<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="amai.org.conventions.map.MapFloorFragment">

    <ImageView
        android:id="@+id/map_floor_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floor1"
        />

    <ImageView
        android:id="@+id/map_floor_up_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_up_float"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/map_floor_down_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_down_float"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>
