<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:custom="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="amai.org.conventions.map.MapFloorFragment"
             android:padding="5dp">

    <com.manuelpeinado.imagelayout.ImageLayout
        android:gravity="center"
        android:id="@+id/map_floor_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:image="@drawable/floor1"
        custom:fit="auto"
        custom:imageWidth="100"
        custom:imageHeight="100">

    </com.manuelpeinado.imagelayout.ImageLayout>

    <ImageView
        android:id="@+id/map_floor_up_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_up_float"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/map_floor_down_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_down_float"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>
