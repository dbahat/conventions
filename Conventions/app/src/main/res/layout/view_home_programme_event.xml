<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_programme_event_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="'פחד' באנימציה לילדים"
            android:textColor="?homeEventNameInList"
            android:textSize="18sp"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/home_programme_event_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:tint="?homeEventNameInList"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/baseline_videocam_white_48"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:id="@+id/home_programme_event_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_divider_height"
        android:background="?homeEventsListDivider"/>

</LinearLayout>