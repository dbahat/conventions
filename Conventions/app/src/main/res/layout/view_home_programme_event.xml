<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/home_programme_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="'פחד' באנימציה לילדים"
        android:textColor="?homeEventNameInList"
        android:textSize="18sp"
        android:layout_margin="8dp"
        />

    <View
        android:id="@+id/home_programme_event_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_divider_height"
        android:background="?homeEventsListDivider"/>

</LinearLayout>