<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layoutDirection="rtl"
             android:id="@+id/event_main_layout"
             tools:context="amai.org.conventions.events.activities.EventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/images_background"
        android:background="?eventDetailsDefaultBackgroundColor">

        <LinearLayout
            android:id="@+id/images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
    </ScrollView>

    <uk.co.chrisjenx.paralloid.views.ParallaxScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parallax_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_detail_boxes"
            android:orientation="vertical"
            android:layoutDirection="rtl">

            <LinearLayout
                android:layout_marginTop="20dp"
                style="@style/EventDetailsBox">

                <TextView
                    android:id="@+id/event_title"
                    android:text="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/EventDetailsBox">

                <TextView
                    android:id="@+id/event_lecturer"
                    android:text="lecturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:id="@+id/event_hall_and_time"
                    android:text="hall and time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    style="@style/TextAppearance.AppCompat.Subhead"/>
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/EventDetailsBox.Feedback">

            <LinearLayout
                android:id="@+id/feedback_closed"
                android:onClick="openFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/event_details_box_padding"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/collapsed_feedback_title"
                    android:paddingTop="@dimen/event_details_box_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="@string/event_has_ended"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:paddingTop="@dimen/event_details_box_padding"
                        android:paddingEnd="@dimen/event_details_box_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        style="@style/EventFeedbackButton"
                        android:onClick="openFeedback"
                        android:text="@string/add_feedback"/>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/feedback_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:onClick="closeFeedback"
                    android:paddingStart="@dimen/event_details_box_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:text="@string/feedback"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:paddingTop="@dimen/event_details_box_padding"
                            android:paddingEnd="@dimen/event_details_box_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            style="@style/EventFeedbackButton"
                            android:onClick="closeFeedback"
                            android:text="@string/close_feedback"/>

                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/event_details_box_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/questions_layout"
                    android:orientation="vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/event_details_box_padding"
                    android:layout_marginEnd="@dimen/event_details_box_padding"
                    android:layout_marginTop="@dimen/event_details_box_padding"
                    android:layout_height="1dp"
                    android:id="@+id/send_feedback_button_separator"
                    android:background="@android:color/black"
                    android:alpha="0.1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_feedback_button_layout"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/send_feedback_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send"
                        android:background="@drawable/feedback_highlighted_button"
                        android:textColor="@color/white"
                        android:onClick="onSendFeedbackClicked"/>

                    <!-- This progress bar gets un-hidden in runtime when the button is clicked -->
                    <ProgressBar
                        android:id="@+id/feedback_progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <!-- This text view is displayed when the feedback was already sent -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/feedback_sent_text"
                        android:layout_margin="10dp"
                        android:text="@string/feedback_sent"
                        android:visibility="gone"/>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                style="@style/EventDetailsBox">

                <TextView
                    android:id="@+id/event_description"
                    android:text="description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body2"
                    />
            </LinearLayout>

        </LinearLayout>

    </uk.co.chrisjenx.paralloid.views.ParallaxScrollView>


</FrameLayout>
