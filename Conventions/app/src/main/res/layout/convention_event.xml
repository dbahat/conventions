<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layoutDirection="rtl"
    android:id="@+id/eventContainer"
    android:onClick="onConventionEventClicked">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_height">

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/faveIcon"
                android:src="@android:drawable/btn_star_big_on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startTime"
                style="@style/EventViewLargeText"
                android:text="Start Time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EventViewSmallText"
                android:text="End Time"
                android:id="@+id/endTime"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textDirection="rtl"
                android:gravity="start|top"
                style="@style/EventViewLargeText"
                android:maxLines="2"
                android:ellipsize="end"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/hallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="start"
                    android:layout_alignParentStart="true"
                    style="@style/EventViewSmallText"
                    android:textColor="@android:color/darker_gray"
                    android:text="Hall name"/>

                <FrameLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lecturerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lecturer name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@android:color/darker_gray"
                        style="@style/EventViewSmallText"/>

                    <amai.org.conventions.customviews.AspectRatioImageView
                        android:id="@+id/feedback_icon"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/stat_notify_chat"
                        android:visibility="gone"
                        />
                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>