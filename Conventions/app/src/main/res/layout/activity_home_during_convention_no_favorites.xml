<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/harucon2017_dark_blue"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="אירועים שמתחילים ב-11:00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/harucon2017_orange">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="כעת: תחרות השירה"
                android:background="@color/harucon2017_red"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'פחד' באנימציה לילדים"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="אומנות לחימה באנימה"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="פרטים קטנים - מי אמר שזה לא חשוב?"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="אובנטו יפני - טעים, קאוואי וקל להכנה! הרצאה מעשית לאוטאקו הרעב"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:text="לכל האירועים"
            android:textSize="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/harucon2017_dark_blue"/>

    </LinearLayout>

</FrameLayout>