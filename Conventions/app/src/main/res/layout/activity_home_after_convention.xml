<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <amai.org.conventions.customviews.AspectRatioImageView
        android:id="@+id/home_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:src="?homeLogo"/>

    <amai.org.conventions.customviews.AspectRatioImageView
        android:id="@+id/home_bottom_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="?homeBottomImage"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/home_info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:layout_below="@+id/home_logo"
        android:layout_above="@+id/home_bottom_image">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?homeTitleBackground"
            android:padding="8dp">
            <TextView
                android:id="@+id/home_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="?homeTitleText"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:text="@string/home_help_us_improve"/>
        </FrameLayout>

        <amai.org.conventions.customviews.FrameLayoutWithMaxHeight
            android:id="@+id/home_content_container"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:maxHeight="190dp"
            android:orientation="vertical"
            android:gravity="center"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:background="?homeMessageBackground">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/home_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/home_send_feedback"
                android:textColor="?homeMessageText"
                android:gravity="center"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="32sp"
                app:autoSizeMaxTextSize="70sp"
                app:autoSizeStepGranularity="2sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </amai.org.conventions.customviews.FrameLayoutWithMaxHeight>
    </LinearLayout>
</RelativeLayout>
