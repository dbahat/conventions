<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="amai.org.conventions.events.activities.HallActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/hall_days_tabs"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        style="@style/TabStyle"
        android:background="?toolbarBackground"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <FrameLayout
        android:foreground="?attr/shadowForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <klogi.com.RtlViewPager
            android:id="@+id/hall_days_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
