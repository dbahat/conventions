<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="amai.org.conventions.events.activities.HallActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/hall_days_tabs"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        style="@style/TabStyle"
        android:background="?tabsBackground"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?separatorColor"/>

        <klogi.com.RtlViewPager
            android:id="@+id/hall_days_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
