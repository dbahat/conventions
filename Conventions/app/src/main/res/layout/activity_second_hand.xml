<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/second_hand_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <se.emilsjolander.stickylistheaders.StickyListHeadersListView
                android:id="@+id/second_hand_form_items_list"
                app:isDrawingListUnderStickyHeader="false"
                app:hasStickyHeaders="false"
                android:divider="@drawable/second_hand_item_list_divider"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/second_hand_no_forms_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:textSize="@dimen/text_size_large_material"
                android:textColor="?hintTextColor"
                android:layout_marginStart="?contentStartMargin"
                android:layout_marginEnd="?contentEndMargin"
                android:padding="25dp"
                android:text="@string/second_hand_no_forms" />
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>