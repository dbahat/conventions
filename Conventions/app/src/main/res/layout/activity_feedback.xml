<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="amai.org.conventions.FeedbackActivity">
    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/events_without_feedback"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="?contentStartMargin"
                android:layout_marginEnd="?contentEndMargin"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/events_without_feedback_title"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="?contentStartMargin"
                    android:layout_marginEnd="?contentEndMargin"
                    android:id="@+id/feedback_no_events_text"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="@string/events_feedback_no_events"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/events_without_feedback_list_layout"
                    android:orientation="vertical">
                    <amai.org.conventions.customviews.NestedListView
                        android:id="@+id/events_without_feedback_list"
                        android:divider="?eventListDivider"
                        android:dividerHeight="@dimen/event_divider_height"
                        android:animateLayoutChanges="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="?contentStartMargin"
                        android:layout_marginEnd="?contentEndMargin"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/send_all_explanation"
                        android:text="@string/send_all_explanation_no_events"/>
                    <FrameLayout
                        android:id="@+id/send_all_button_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="?contentStartMargin"
                        android:layout_marginEnd="?contentEndMargin"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/send_all_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/HighlightedButton"
                            android:enabled="false"
                            android:text="@string/send_all" />

                        <!-- this progress bar gets un-hidden in runtime when the button is clicked -->
                        <ProgressBar
                            android:id="@+id/send_all_progress_bar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="?progressBarDrawable"
                            android:visibility="gone" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/transparent_black"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="?contentStartMargin"
                        android:layout_marginEnd="?contentEndMargin"
                        />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/events_with_sent_feedback"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="0dp"
                android:layout_marginStart="?contentStartMargin"
                android:layout_marginEnd="?contentEndMargin"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:text="@string/events_with_feedback_title"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="top|end"
                    android:id="@+id/show_hide_events_with_sent_feedback"
                    android:text="@string/hide"
                    android:onClick="toggleEventsWithSentFeedback"
                    style="@style/BorderlessButton"/>
            </LinearLayout>
            <amai.org.conventions.customviews.NestedListView
                android:id="@+id/events_with_sent_feedback_list"
                android:divider="?eventListDivider"
                android:dividerHeight="@dimen/event_divider_height"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/transparent_black"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="?contentStartMargin"
                android:layout_marginEnd="?contentEndMargin"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="?contentStartMargin"
            android:layout_marginEnd="?contentEndMargin"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="@string/convention_feedback_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="?contentStartMargin"
            android:layout_marginEnd="?contentEndMargin"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/convention_feedback_subtitle"/>

        <amai.org.conventions.events.CollapsibleFeedbackView
            android:id="@+id/convention_feedback_view"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="?contentStartMargin"
            android:layout_marginEnd="?contentEndMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
