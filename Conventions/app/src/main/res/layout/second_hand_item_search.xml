<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="?contentStartMargin"
    android:layout_marginEnd="?contentEndMargin"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:clickable="true"
    android:focusable="true">
    <!-- setting clickable/focusable so ListView dividers will show. see https://stackoverflow.com/questions/5375138/disappearing-divider-in-listview-when-arrayadapter-isenabled-returns-false -->

    <TextView
        android:id="@+id/second_hand_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="14sp"
        tools:text="The title - volume 1 (book)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/second_hand_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="?secondHandItemDefaultColor"
            android:textSize="12sp"
            tools:text="10 NIS" />

        <TextView
            android:id="@+id/second_hand_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="?secondHandItemDefaultColor"
            android:textSize="12sp"
            tools:text="005/01" />
    </LinearLayout>
</LinearLayout>
