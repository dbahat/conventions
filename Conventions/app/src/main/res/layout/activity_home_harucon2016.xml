<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:id="@+id/home_main_layout"
    android:background="@color/off_white">

    <FrameLayout
        android:id="@+id/home_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="top"
            android:src="@drawable/harucon2016_cover"/>

        <amai.org.conventions.customviews.AspectRatioImageView
            android:id="@+id/logo"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/harucon2016_logo_and_title"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:padding="15dp"
            android:alpha="0.5"
            android:onClick="onAboutClicked"
            android:src="@drawable/ic_info_outline"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:tag="1">

                <amai.org.conventions.customviews.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/harucon2016_events"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:tag="0">

                <amai.org.conventions.customviews.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/harucon2016_map"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_buttons_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:tag="2">

                <amai.org.conventions.customviews.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/harucon2016_updates"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:tag="3">

                <amai.org.conventions.customviews.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/harucon2016_arrival_methods"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
