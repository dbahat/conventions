<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amai.org.conventions.MyEventsActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <include
        android:id="@+id/my_events_toolbar"
        layout="@layout/navigation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nextEventStart"
        android:gravity="center"
        android:background="@color/gold"
        android:text="Next event start time"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myEventsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
