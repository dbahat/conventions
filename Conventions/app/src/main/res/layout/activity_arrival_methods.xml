<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/arrival_methods_root"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context="amai.org.conventions.ArrivalMethodsActivity">
    <fragment
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/no_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large_material"
            android:textColor="@color/hint_gray"
            android:text="@string/missing_play_services_dialog_message"
            android:gravity="center"/>
        <Button
            android:id="@+id/install_play_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HighlightedButton"
            android:enabled="true"
            android:text="@string/missing_play_services_ok_button" />
    </LinearLayout>
</FrameLayout>