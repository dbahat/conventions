<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/black">

    <amai.org.conventions.customviews.CompoundTextView
        android:id="@+id/navigation_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingTop="?navigationPopupItemPaddingTop"
        android:paddingBottom="?navigationPopupItemPaddingBottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?navigationPopupNotSelectedColor"
        app:compoundDrawableHeight="24dp"
        app:compoundDrawableWidth="24dp"
        tools:text="Topic 1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?navigationPopupSeparatorColor"/>

</LinearLayout>