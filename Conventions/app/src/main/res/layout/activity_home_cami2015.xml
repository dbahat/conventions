<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:id="@+id/home_main_layout"
    android:background="@color/maroon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:src="@drawable/cami_logo"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:background="@color/orange"
                android:tag="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_cami_events"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:background="@color/dark_orange"
                android:tag="0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_cami_map"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:background="@color/light_green"
                android:tag="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_cami_updates"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onNavigationButtonClicked"
                android:background="@color/blue"
                android:tag="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_cami_arrival_methods"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp">

        <amai.org.conventions.customviews.AspectRatioImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/amai_logo"
            android:onClick="onAboutClicked"
            android:src="@drawable/ic_info_outline"/>

        <amai.org.conventions.customviews.AspectRatioImageView
            android:id="@+id/amai_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/amai_logo"
            android:onClick="onAboutClicked"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
