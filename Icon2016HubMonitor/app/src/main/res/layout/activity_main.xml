<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/activity_main"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="org.dbahat.icon2016hubmonitor.MainActivity">    <RadioGroup        android:id="@+id/radio_group"        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <RadioButton            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="חירום"            android:tag="icon2016_emergency"/>        <RadioButton            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="כללי"            android:tag="icon2016_general"/>        <RadioButton            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="אירועים"            android:tag="icon2016_events"/>        <RadioButton            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="בדיקות"            android:tag="icon2016_test"/>    </RadioGroup>    <Button        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="כמות מכשירית רשומים"        android:onClick="getRegistrationsPerCategoryOnClick"        android:layout_gravity="center"/>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_gravity="center">        <Button            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="שלח לאנדרואיד"            android:onClick="sendAndroidNotificationButtonOnClick"/>        <Button            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="שלח לאייפון"            android:onClick="sendiOSNotificationButtonOnClick"/>    </LinearLayout>    <TextView        android:id="@+id/remainingCharsCount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="0/1900"/>    <EditText        android:id="@+id/editText"        android:layout_width="match_parent"        android:layout_height="wrap_content" /></LinearLayout>